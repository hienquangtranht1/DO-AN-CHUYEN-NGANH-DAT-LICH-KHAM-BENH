@* KHÔNG CẦN THÊM CTA VÀ CONTACT VÌ SẼ LẤY TỪ _Layout.cshtml (như trang Blog) *@

<style>
    /* Định nghĩa lại các biến màu theo trang blog */
    :root {
        --primary-color: #0d6efd; /* Blue */
        --secondary-color: #6c757d; /* Gray */
        --accent-color: #0dcaf0; /* Cyan/Light Blue */
        --success-color: #198754;
        --text-dark: #212529;
        --light-gray: #f8f9fa;
    }

    /* === Đồng bộ Style từ Blog/Dịch vụ === */

    /* Header Section */
    .blog-header {
        position: relative;
        min-height: 250px !important;
    }

    /* Section Header */
    .section-header {
        margin-bottom: 3rem;
    }

        .section-header h2 {
            color: var(--text-dark);
            font-weight: 700;
            font-size: 2.5rem;
        }

    .header-line {
        width: 80px;
        height: 4px;
        background: linear-gradient(90deg, var(--primary-color), var(--accent-color));
        border-radius: 2px;
        margin-top: 10px;
    }

    /* Stats Box Style (Tương tự Process Card nhưng cho mục thống kê) */
    .about-stats {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
        background: var(--light-gray);
        border: 1px solid #e9ecef;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
    }

    .stat-item {
        background: white;
        border-radius: 0.5rem;
        padding: 1rem;
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        transition: all 0.2s;
    }

        .stat-item:hover {
            background: var(--bg-accent);
            transform: translateY(-2px);
        }

    .stat-number {
        font-size: 1.8rem;
        font-weight: 700;
    }

    .stat-label {
        font-size: 0.9rem;
        color: var(--secondary-color);
    }

    /* Responsive */
    @@media (max-width: 991px) {
        .about-stats {
            margin-top: 2rem;
            display: flex;
            flex-direction: row;
            flex-wrap: wrap;
            justify-content: center;
            gap: 0.5rem;
            padding: 1rem;
        }

        .stat-item {
            flex-basis: 45%;
        }
    }

    @@media (max-width: 576px) {
        .blog-header {
            min-height: 220px !important;
        }

        .section-header h2 {
            font-size: 2rem;
        }

        .stat-item {
            flex-basis: 100%;
        }
    }
</style>

