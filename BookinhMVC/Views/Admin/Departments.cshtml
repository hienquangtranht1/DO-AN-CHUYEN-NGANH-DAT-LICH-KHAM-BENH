@model IEnumerable<BookinhMVC.Models.Khoa>

@{
    Layout = "_AdminLayout";
    ViewBag.Active = "Departments";
    ViewBag.Title = "Quản lý Khoa";

    // --- PHẦN GIẢ ĐỊNH DỮ LIỆU PHÂN TRANG TỪ CONTROLLER ---
    var totalPages = ViewBag.TotalPages ?? 3;
    var currentPage = ViewBag.CurrentPage ?? 1;
    var hasPreviousPage = currentPage > 1;
    var hasNextPage = currentPage < totalPages;
}

@section Styles {
    <style>
        /* VARIABLES (Đồng bộ với Layout và các trang khác) */
        :root {
            --primary-color: #4f46e5;
            --success-color: #10b981;
            --warning-color: #f59e0b;
            --danger-color: #ef4444;
            --info-color: #0dcaf0;
            --text-primary: #1f2937;
            --text-secondary: #6b7280;
        }

        /* === HEADER VÀ CONTENT STYLES === */
        .management-header {
            background: linear-gradient(135deg, var(--primary-color) 0%, #6366f1 100%);
            border-radius: 20px;
            padding: 1.5rem 2rem;
            margin-bottom: 1.5rem;
            color: white;
            box-shadow: 0 10px 30px rgba(79, 70, 229, 0.3);
        }

        .header-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 1rem;
        }

        .title-section {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .icon-wrapper {
            background: rgba(255, 255, 255, 0.2);
            padding: 0.75rem;
            border-radius: 50%;
            backdrop-filter: blur(5px);
        }

            .icon-wrapper i {
                font-size: 1.75rem;
                color: white;
            }

        .main-title {
            font-size: 1.75rem;
            font-weight: 700;
            margin: 0;
        }

        .subtitle {
            margin-top: 0.25rem;
            opacity: 0.9;
            font-size: 0.9rem;
        }

        /* Nút Thêm Khoa mới */
        .btn-add-department {
            background: var(--success-color);
            color: white;
            padding: 0.6rem 1.2rem;
            border-radius: 50px;
            font-weight: 600;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(16, 185, 129, 0.3);
            border: none;
        }

            .btn-add-department:hover {
                background: #059669;
                transform: translateY(-2px);
                box-shadow: 0 6px 20px rgba(16, 185, 129, 0.4);
                color: white;
            }

        /* === TABLE STYLES (Đồng bộ) === */
        .table-card {
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08) !important;
            border-radius: 12px !important;
        }

        .table-responsive {
            border-radius: 12px;
        }

        .table thead th {
            background: var(--primary-color);
            color: white;
            font-weight: 600;
            vertical-align: middle;
            white-space: nowrap;
            border: none;
            font-size: 0.9rem;
        }

        .table td {
            white-space: normal; /* Cho phép mô tả xuống dòng */
            vertical-align: middle;
            font-size: 0.9rem;
        }

        .table tbody tr:hover {
            background-color: #f5f5f5;
        }

        .action-column {
            min-width: 150px;
        }

        /* Cải tiến nút hành động trong bảng */
        .btn-group .btn {
            border-radius: 8px !important;
            padding: 6px 8px;
            font-size: 0.85rem;
            margin: 0 2px;
            transition: all 0.2s;
        }

        .btn-outline-info {
            color: #0dcaf0 !important;
            border-color: #0dcaf0;
        }

            .btn-outline-info:hover {
                background-color: #0dcaf0;
                color: white !important;
            }

        .btn-outline-warning {
            color: var(--warning-color) !important;
            border-color: var(--warning-color);
        }

            .btn-outline-warning:hover {
                background-color: var(--warning-color);
                color: white !important;
            }

        .btn-outline-danger {
            color: var(--danger-color) !important;
            border-color: var(--danger-color);
        }

            .btn-outline-danger:hover {
                background-color: var(--danger-color);
                color: white !important;
            }

        /* === FOOTER PAGINATION STYLES (Đồng bộ) === */
        .pagination-footer {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 1.5rem;
            padding: 1rem 0;
            flex-wrap: wrap;
            width: 100%;
        }

        .pagination-arrow {
            background: linear-gradient(135deg, var(--primary-color) 0%, #6366f1 100%);
            color: white;
            border: none;
            padding: 0.75rem 1.75rem;
            border-radius: 10px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            box-shadow: 0 4px 15px rgba(79, 70, 229, 0.3);
            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            text-decoration: none;
        }

            .pagination-arrow.disabled {
                background: #e5e7eb;
                color: #9ca3af;
                cursor: not-allowed;
                box-shadow: none;
                pointer-events: none;
            }

        /* Tùy chỉnh nút số trang */
        .pagination {
            margin-bottom: 0 !important;
        }

            .pagination .page-item .page-link {
                border-radius: 8px !important;
                margin: 0 4px;
                border-color: #e5e7eb;
                color: var(--text-primary);
                font-weight: 600;
                width: 40px;
                height: 40px;
                display: flex;
                align-items: center;
                justify-content: center;
            }

            .pagination .page-item.active .page-link {
                background-color: var(--primary-color);
                border-color: var(--primary-color);
                color: white;
            }

        /* === RESPONSIVE === */
        @@media (max-width: 768px) {
            .management-header {
                padding: 1rem;
            }

            .header-content {
                flex-direction: column;
                align-items: center;
            }

            .title-section {
                text-align: center;
                flex-direction: column;
                gap: 0.5rem;
            }

            .pagination-footer {
                flex-direction: column;
                gap: 1rem;
                width: 100%;
            }

            .pagination-arrow {
                width: 100%;
                justify-content: center;
                padding: 1rem;
            }

            .pagination-footer nav.d-none.d-sm-block {
                display: none !important;
            }

            .table-responsive {
                border-radius: 0;
            }
        }
    </style>
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">

            <div class="management-header">
                <div class="header-content">
                    <div class="title-section">
                        <div class="icon-wrapper">
                            <i class="fas fa-building"></i>
                        </div>
                        <div>
                            <h2 class="main-title">@ViewBag.Title</h2>
                            <p class="subtitle">Danh sách các khoa chuyên môn trong bệnh viện</p>
                        </div>
                    </div>
                    <a href="/Admin/CreateDepartment" class="btn btn-add-department">
                        <i class="fas fa-plus"></i>
                        <span>Thêm Khoa mới</span>
                    </a>
                </div>
            </div>

            <div class="card shadow-lg rounded-4 table-card">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover align-middle mb-0">
                            <thead>
                                <tr>
                                    <th style="width: 5%;">Mã Khoa</th>
                                    <th style="width: 25%;">Tên khoa</th>
                                    <th style="width: 45%;">Mô tả</th>
                                    <th style="width: 25%;" class="action-column text-center">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    @foreach (var k in Model)
                                    {
                                        <tr data-name="@k.TenKhoa" data-id="@k.MaKhoa">
                                            <td><span class="badge bg-secondary">#@k.MaKhoa</span></td>
                                            <td class="fw-bold text-dark">@k.TenKhoa</td>
                                            <td>
                                                @{
                                                    string fullMoTa = k.MoTa ?? "";
                                                    string truncatedMoTa = fullMoTa.Length > 100
                                                    ? fullMoTa.Substring(0, 100) + "..."
                                                    : fullMoTa;
                                                }
                                                @Html.Raw(truncatedMoTa)
                                            </td>
                                            <td class="align-middle action-column text-center">
                                                <a href="/Admin/DepartmentDetails/@k.MaKhoa" class="btn btn-sm btn-outline-info me-1" title="Xem chi tiết">
                                                    <i class="fas fa-eye"></i> <span class="d-none d-lg-inline">Xem</span>
                                                </a>
                                                <a href="/Admin/EditDepartment/@k.MaKhoa" class="btn btn-sm btn-outline-warning me-1" title="Chỉnh sửa">
                                                    <i class="fas fa-edit"></i> <span class="d-none d-lg-inline">Sửa</span>
                                                </a>
                                                <button type="button" class="btn btn-sm btn-outline-danger delete-btn"
                                                        data-id="@k.MaKhoa"
                                                        data-name="@k.TenKhoa"
                                                        title="Xóa">
                                                    <i class="fas fa-trash-alt"></i> <span class="d-none d-lg-inline">Xóa</span>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4" class="text-center py-4 text-muted">Không có khoa nào được tìm thấy.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    @if (Model == null || !Model.Any())
                    {
                        <div class="p-5 text-center text-muted">
                            <i class="fas fa-exclamation-circle fa-2x mb-3"></i>
                            <p>Hiện tại không có khoa nào được thêm vào hệ thống.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-5">
    <div class="col-12 d-flex justify-content-center">
        <div class="pagination-footer full-width">

            <a href="/Admin/Departments?page=@(currentPage - 1)" class="pagination-arrow prev-arrow @(!hasPreviousPage ? "disabled" : "")">
                <i class="fas fa-chevron-left"></i>
                <span>Trước</span>
            </a>

            <nav class="d-none d-sm-block">
                <ul class="pagination justify-content-center mb-0">
                    @{
                        const int maxPageButtons = 5;
                        int startPage = Math.Max(1, currentPage - (maxPageButtons / 2));
                        int endPage = Math.Min(totalPages, startPage + maxPageButtons - 1);

                        if (endPage - startPage < maxPageButtons - 1)
                        {
                            startPage = Math.Max(1, endPage - maxPageButtons + 1);
                        }
                    }

                    @if (startPage > 1)
                    {
                        <li class="page-item"><a class="page-link page-num-link" href="/Admin/Departments?page=1">1</a></li>
                        if (startPage > 2)
                        {
                            <li class="page-item disabled"><span class="page-link">...</span></li>
                        }
                    }

                    @for (int i = startPage; i <= endPage; i++)
                    {
                        <li class="page-item @(i == currentPage ? "active" : "")">
                            <a class="page-link page-num-link" href="/Admin/Departments?page=@i">@i</a>
                        </li>
                    }

                    @if (endPage < totalPages)
                    {
                        if (endPage < totalPages - 1)
                        {
                            <li class="page-item disabled"><span class="page-link">...</span></li>
                        }
                        <li class="page-item"><a class="page-link page-num-link" href="/Admin/Departments?page=@totalPages">@totalPages</a></li>
                    }
                </ul>
            </nav>

            <a href="/Admin/Departments?page=@(currentPage + 1)" class="pagination-arrow next-arrow @(!hasNextPage ? "disabled" : "")">
                <span>Sau</span>
                <i class="fas fa-chevron-right"></i>
            </a>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteConfirmationModal" tabindex="-1" aria-labelledby="deleteConfirmationModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteConfirmationModalLabel"><i class="fas fa-exclamation-triangle me-2"></i>Xác nhận Xóa</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Bạn có chắc chắn muốn xóa khoa **<span id="departmentName" class="fw-bold"></span>** (Mã: <span id="departmentId"></span>) không?
                <br><strong class="text-danger">Lưu ý: Hành động này không thể hoàn tác và có thể ảnh hưởng đến dữ liệu Bác sĩ liên quan.</strong>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <a id="confirmDeleteButton" href="#" class="btn btn-danger"><i class="fas fa-trash-alt me-2"></i>Xóa vĩnh viễn</a>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        // 1. Kích hoạt Tooltip Bootstrap
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        });

        // 2. Xử lý Modal Xác nhận Xóa
        var deleteModalElement = document.getElementById('deleteConfirmationModal');
        // Chỉ khởi tạo Modal nếu phần tử tồn tại
        if (deleteModalElement) {
            var deleteModal = new bootstrap.Modal(deleteModalElement);
            var deleteButtons = document.querySelectorAll('.delete-btn');
            var confirmButton = document.getElementById('confirmDeleteButton');
            var departmentName = document.getElementById('departmentName');
            var departmentId = document.getElementById('departmentId');

            deleteButtons.forEach(button => {
                button.addEventListener('click', function () {
                    const id = this.getAttribute('data-id');
                    const name = this.getAttribute('data-name');

                    // Cập nhật nội dung Modal
                    departmentName.textContent = name;
                    departmentId.textContent = id;

                    // Thiết lập liên kết cho nút xác nhận
                    confirmButton.href = "/Admin/DeleteDepartment/" + id;

                    // Hiển thị Modal
                    deleteModal.show();
                });
            });
        }
    });
</script>