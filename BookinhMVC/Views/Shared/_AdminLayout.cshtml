@{
    Layout = null;
    var adminName = Context.Session.GetString("AdminName") ?? "Quản trị viên";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title | Admin Panel</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/a2e0e9f6f1.js" crossorigin="anonymous"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />


    <style>
        :root {
            --sidebar-width: 260px;
            --sidebar-bg: #1a1d29;
            --sidebar-hover-bg: #252836;
            --primary-color: #4f46e5;
            --primary-hover: #4338ca;
            --text-primary: #1f2937;
            --text-secondary: #6b7280;
            --border-color: #e5e7eb;
            --success-color: #10b981;
            --danger-color: #ef4444;
            --warning-color: #f59e0b;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            min-height: 100vh;
            background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
            overflow-x: hidden;
        }

        /* Sidebar Styles */
        .sidebar {
            width: var(--sidebar-width);
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            background: var(--sidebar-bg);
            color: #fff;
            box-shadow: 4px 0 20px rgba(0, 0, 0, 0.1);
            z-index: 1040;
            overflow-y: auto;
            transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

            .sidebar::-webkit-scrollbar {
                width: 6px;
            }

            .sidebar::-webkit-scrollbar-track {
                background: rgba(255, 255, 255, 0.05);
            }

            .sidebar::-webkit-scrollbar-thumb {
                background: rgba(255, 255, 255, 0.2);
                border-radius: 3px;
            }

        .sidebar-header {
            padding: 24px 20px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.08);
            margin-bottom: 16px;
            background: linear-gradient(135deg, rgba(79, 70, 229, 0.1), rgba(99, 102, 241, 0.05));
        }

            .sidebar-header h4 {
                font-weight: 700;
                color: #fff;
                font-size: 1.25rem;
                display: flex;
                align-items: center;
                gap: 10px;
            }

                .sidebar-header h4 i {
                    color: var(--primary-color);
                    font-size: 1.5rem;
                }

        .sidebar-nav {
            padding: 0 12px 20px;
        }

        .sidebar a {
            color: rgba(255, 255, 255, 0.7);
            text-decoration: none;
            display: flex;
            align-items: center;
            padding: 12px 16px;
            margin: 4px 0;
            border-radius: 10px;
            transition: all 0.3s ease;
            font-size: 0.95rem;
            font-weight: 500;
            position: relative;
            overflow: hidden;
        }

            .sidebar a::before {
                content: '';
                position: absolute;
                left: 0;
                top: 0;
                height: 100%;
                width: 3px;
                background: var(--primary-color);
                transform: scaleY(0);
                transition: transform 0.3s ease;
            }

            .sidebar a i {
                margin-right: 14px;
                font-size: 1.15rem;
                width: 24px;
                text-align: center;
            }

            .sidebar a:hover {
                color: #fff;
                background: var(--sidebar-hover-bg);
                transform: translateX(4px);
            }

            .sidebar a.active {
                color: #fff;
                background: linear-gradient(135deg, var(--primary-color), #6366f1);
                box-shadow: 0 4px 15px rgba(79, 70, 229, 0.3);
                font-weight: 600;
            }

                .sidebar a.active::before {
                    transform: scaleY(1);
                }

        /* Main Content Area */
        .admin-main-wrapper {
            margin-left: var(--sidebar-width);
            width: calc(100% - var(--sidebar-width));
            transition: margin-left 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .admin-content {
            padding: 24px;
            min-height: calc(100vh - 80px);
        }

        /* Top Navbar */
        .top-navbar {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid var(--border-color);
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
            padding: 16px 24px;
            position: sticky;
            top: 0;
            z-index: 1030;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .navbar-title {
            display: flex;
            align-items: center;
            gap: 16px;
        }

        .menu-toggle {
            display: none;
            background: transparent;
            border: none;
            font-size: 1.5rem;
            /* CẬP NHẬT: Đổi màu cho biểu tượng Hamburger nổi bật hơn */
            color: var(--primary-color);
            cursor: pointer;
            padding: 8px 12px;
            border-radius: 8px;
            transition: all 0.3s ease;
            position: relative;
        }

            .menu-toggle:hover {
                background: #f3f4f6;
            }

            .menu-toggle i {
                transition: transform 0.3s ease;
            }

        .sidebar.active ~ .admin-main-wrapper .menu-toggle i {
            transform: rotate(90deg);
        }

        .navbar-title h5 {
            margin: 0;
            color: var(--text-primary);
            font-weight: 600;
            font-size: 1.25rem;
        }

        /* Profile Dropdown */
        .profile-dropdown {
            position: relative;
        }

        .profile-trigger {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 8px 16px;
            border-radius: 12px;
            cursor: pointer;
            transition: all 0.3s ease;
            border: 1px solid transparent;
            background: transparent;
        }

            .profile-trigger:hover {
                background: #f9fafb;
                border-color: var(--border-color);
            }

        .profile-avatar {
            width: 44px;
            height: 44px;
            border-radius: 50%;
            background: linear-gradient(135deg, var(--primary-color), #6366f1);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: 700;
            font-size: 18px;
            box-shadow: 0 4px 12px rgba(79, 70, 229, 0.2);
        }

        .profile-info {
            display: flex;
            flex-direction: column;
            align-items: flex-start;
        }

        .profile-name {
            font-weight: 600;
            color: var(--text-primary);
            font-size: 0.95rem;
        }

        .profile-role {
            font-size: 0.8rem;
            color: var(--text-secondary);
        }

        .dropdown-arrow {
            margin-left: 4px;
            transition: transform 0.3s ease;
            color: var(--text-secondary);
            font-size: 0.85rem;
        }

        .profile-dropdown.show .dropdown-arrow {
            transform: rotate(180deg);
        }

        .profile-menu {
            position: absolute;
            top: calc(100% + 12px);
            right: 0;
            background: white;
            border-radius: 12px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.12);
            min-width: 240px;
            opacity: 0;
            visibility: hidden;
            transform: translateY(-10px);
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            z-index: 1050;
            overflow: hidden;
            border: 1px solid var(--border-color);
        }

        .profile-dropdown.show .profile-menu {
            opacity: 1;
            visibility: visible;
            transform: translateY(0);
        }

        .profile-menu-header {
            padding: 20px;
            border-bottom: 1px solid var(--border-color);
            background: linear-gradient(135deg, #f9fafb, #f3f4f6);
        }

            .profile-menu-header .profile-name {
                font-weight: 700;
                color: var(--text-primary);
                margin-bottom: 4px;
                font-size: 1rem;
            }

            .profile-menu-header .profile-email {
                font-size: 0.85rem;
                color: var(--text-secondary);
            }

        .profile-menu-item {
            display: flex;
            align-items: center;
            padding: 12px 20px;
            color: var(--text-primary);
            text-decoration: none;
            transition: all 0.2s ease;
            border: none;
            background: none;
            width: 100%;
            text-align: left;
            cursor: pointer;
            font-size: 0.9rem;
        }

            .profile-menu-item:hover {
                background: #f9fafb;
                color: var(--primary-color);
            }

            .profile-menu-item i {
                margin-right: 12px;
                width: 20px;
                text-align: center;
                font-size: 1.05rem;
            }

            .profile-menu-item.text-danger:hover {
                background: #fef2f2;
                color: var(--danger-color);
            }

        .profile-menu-divider {
            height: 1px;
            background: var(--border-color);
            margin: 8px 0;
        }

        /* Sidebar Overlay for Mobile */
        .sidebar-overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.5);
            z-index: 1035;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

            .sidebar-overlay.active {
                display: block;
                opacity: 1;
            }

        /* Responsive Design */
        @@media (max-width: 1024px) {
            : root

        {
            --sidebar-width: 240px;
        }

        }

        @@media (max-width: 768px) {
            .sidebar

        {
            transform: translateX(-100%);
        }

        .sidebar.active {
            transform: translateX(0);
        }

        .admin-main-wrapper {
            margin-left: 0;
            width: 100%;
        }

        .menu-toggle {
            display: block;
        }

        .top-navbar {
            padding: 12px 16px;
        }

        .navbar-title h5 {
            font-size: 1.1rem;
        }

        .admin-content {
            padding: 16px;
        }

        .profile-info {
            display: none;
        }

        .profile-trigger {
            padding: 8px;
        }

        .dropdown-arrow {
            display: none;
        }

        .profile-menu {
            right: 0;
            min-width: 260px;
        }

        }

        @@media (max-width: 480px) {
            .navbar-title h5

        {
            font-size: 1rem;
        }

        .profile-avatar {
            width: 38px;
            height: 38px;
            font-size: 16px;
        }

        .admin-content {
            padding: 12px;
        }

        .sidebar-header h4 {
            font-size: 1.1rem;
        }

        .sidebar a {
            padding: 10px 14px;
            font-size: 0.9rem;
        }

        }

        /* Custom Scrollbar for Main Content */
        .admin-content::-webkit-scrollbar {
            width: 8px;
        }

        .admin-content::-webkit-scrollbar-track {
            background: #f1f5f9;
        }

        .admin-content::-webkit-scrollbar-thumb {
            background: #cbd5e1;
            border-radius: 4px;
        }

            .admin-content::-webkit-scrollbar-thumb:hover {
                background: #94a3b8;
            }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="sidebar-overlay" id="sidebarOverlay"></div>

    <nav class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <h4 class="mb-0">
                <i class="fas fa-notes-medical"></i>
                <span>Hệ thống Y tế</span>
            </h4>
        </div>

        <div class="sidebar-nav">
            <a href="/Admin" class="@(ViewBag.Active == "Dashboard" ? "active" : "")">
                <i class="fas fa-tachometer-alt"></i>
                <span>Dashboard</span>
            </a>
            <a href="/Admin/Users" class="@(ViewBag.Active == "Users" ? "active" : "")">
                <i class="fas fa-users"></i>
                <span>Người dùng</span>
            </a>
            <a href="/Admin/Doctors" class="@(ViewBag.Active == "Doctors" ? "active" : "")">
                <i class="fas fa-user-md"></i>
                <span>Bác sĩ</span>
            </a>
            <a href="/Admin/WorkSchedules" class="@(ViewBag.Active == "WorkSchedules" ? "active" : "")">
                <i class="fas fa-clock"></i>
                <span>Lịch làm việc</span>
            </a>
            <a href="/Admin/Patients" class="@(ViewBag.Active == "Patients" ? "active" : "")">
                <i class="fas fa-hospital-user"></i>
                <span>Bệnh nhân</span>
            </a>
            <a href="/Admin/Departments" class="@(ViewBag.Active == "Departments" ? "active" : "")">
                <i class="fas fa-building"></i>
                <span>Khoa</span>
            </a>
            <a href="/Admin/Appointments" class="@(ViewBag.Active == "Appointments" ? "active" : "")">
                <i class="fas fa-calendar-check"></i>
                <span>Lịch hẹn</span>
            </a>
            <a href="/Admin/Reviews" class="@(ViewBag.Active == "Reviews" ? "active" : "")">
                <i class="fas fa-star-half-alt"></i>
                <span>Đánh giá</span>
            </a>
            <a href="/Admin/Articles" class="@(ViewBag.Active == "Articles" ? "active" : "")">
                <i class="fa-regular fa-newspaper"></i>
                <span>Bài viết</span>
            </a>
            
            <a href="/Admin/BlogCategories" class="@(ViewBag.Active == "BlogCategories" ? "active" : "")">
                <i class="fa-solid fa-bars"></i>
                <span>Danh mục blog</span>
            </a>
        </div>
    </nav>

    <div class="admin-main-wrapper">
        <nav class="top-navbar">
            <div class="navbar-title">
                <button class="menu-toggle" id="menuToggle">
                    <i class="fas fa-bars"></i>
                </button>
                <h5>@ViewBag.Title</h5>
            </div>

            <div class="profile-dropdown" id="profileDropdown">
                <button class="profile-trigger" id="profileTrigger">
                    <div class="profile-avatar">
                        @adminName.Substring(0, 1).ToUpper()
                    </div>
                    <div class="profile-info">
                        <span class="profile-name">@adminName</span>
                        <span class="profile-role">Quản trị viên</span>
                    </div>
                    <i class="fas fa-chevron-down dropdown-arrow"></i>
                </button>

                <div class="profile-menu">
                    <div class="profile-menu-header">
                        <div class="profile-name">@adminName</div>
                        <div class="profile-email">admin@hospital.com</div>
                    </div>
                    <a href="/Admin/Profile" class="profile-menu-item">
                        <i class="fas fa-user-circle"></i>
                        <span>Thông tin cá nhân</span>
                    </a>
                    <a href="/Admin/UpdateProfile" class="profile-menu-item">
                        <i class="fas fa-user-edit"></i>
                        <span>Cập nhật hồ sơ</span>
                    </a>
                    <a href="/Admin/ChangePassword" class="profile-menu-item">
                        <i class="fas fa-key"></i>
                        <span>Đổi mật khẩu</span>
                    </a>
                    <div class="profile-menu-divider"></div>
                    <a href="/Admin/Settings" class="profile-menu-item">
                        <i class="fas fa-cog"></i>
                        <span>Cài đặt</span>
                    </a>
                    <div class="profile-menu-divider"></div>
                    <form asp-controller="Admin" asp-action="Logout" method="post" style="margin: 0;">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="profile-menu-item text-danger">
                            <i class="fas fa-sign-out-alt"></i>
                            <span>Đăng xuất</span>
                        </button>
                    </form>
                </div>
            </div>
        </nav>

        <main class="admin-content">
            @RenderBody()
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    @RenderSection("Scripts", required: false)

    <script>
        // === Logic Hamburger Menu Toggle (Mobile) ===
        const menuToggle = document.getElementById('menuToggle');
        const sidebar = document.getElementById('sidebar');
        const sidebarOverlay = document.getElementById('sidebarOverlay');

        function toggleSidebar() {
            // Toggle 'active' class on sidebar and overlay to show/hide them
            sidebar.classList.toggle('active');
            sidebarOverlay.classList.toggle('active');
            // Prevent scrolling on the body when sidebar is active (mobile)
            document.body.style.overflow = sidebar.classList.contains('active') ? 'hidden' : '';
        }

        // 1. Show/Hide sidebar when clicking the hamburger button
        menuToggle.addEventListener('click', toggleSidebar);

        // 2. Hide sidebar when clicking the overlay (only on mobile)
        sidebarOverlay.addEventListener('click', toggleSidebar);

        // 3. Close sidebar when clicking on a link (improves UX on mobile)
        if (window.innerWidth <= 768) {
            document.querySelectorAll('.sidebar a').forEach(link => {
                link.addEventListener('click', () => {
                    // Only close if sidebar is currently active
                    if (sidebar.classList.contains('active')) {
                         toggleSidebar();
                    }
                });
            });
        }

        // === Logic Profile Dropdown Toggle ===
        const profileDropdown = document.getElementById('profileDropdown');
        const profileTrigger = document.getElementById('profileTrigger');
        const profileMenu = document.querySelector('.profile-menu'); // Get menu element directly

        profileTrigger.addEventListener('click', function(e) {
            e.stopPropagation(); // Prevent document click listener from firing immediately
            profileDropdown.classList.toggle('show');
        });

        // Close dropdown when clicking outside
        document.addEventListener('click', function(e) {
            if (!profileDropdown.contains(e.target)) {
                profileDropdown.classList.remove('show');
            }
        });

        // Prevent dropdown from closing when clicking inside menu (unless clicking a form/button)
        if (profileMenu) {
            profileMenu.addEventListener('click', function(e) {
                // Allow click to propagate if it's a form submission or a link/button within the menu
                if (!e.target.closest('a') && !e.target.closest('button')) {
                    e.stopPropagation();
                }
            });
        }

        // Handle window resize (desktop view correction)
        let resizeTimer;
        window.addEventListener('resize', function() {
            clearTimeout(resizeTimer);
            resizeTimer = setTimeout(function() {
                // If resized to desktop view, ensure mobile classes are removed
                if (window.innerWidth > 768) {
                    sidebar.classList.remove('active');
                    sidebarOverlay.classList.remove('active');
                    document.body.style.overflow = '';
                }
            }, 250);
        });
    </script>
</body>
</html>