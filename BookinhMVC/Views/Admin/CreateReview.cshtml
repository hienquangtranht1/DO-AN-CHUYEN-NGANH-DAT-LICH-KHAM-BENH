@model BookinhMVC.Models.DanhGia
@{
    Layout = "_AdminLayout";
    ViewBag.Active = "Reviews";
    ViewBag.Title = "Thêm Đánh giá";

    var doctors = ViewBag.Doctors as List<BookinhMVC.Models.BacSi>;
    var patients = ViewBag.Patients as List<BookinhMVC.Models.BenhNhan>;

    var ratingScores = Enumerable.Range(1, 5).ToList();

    var initialDateTime = (Model?.NgayDanhGia != null && Model.NgayDanhGia != default(DateTime))
        ? Model.NgayDanhGia.ToString("yyyy-MM-ddTHH:mm")
        : DateTime.Now.ToString("yyyy-MM-ddTHH:mm");
}

@section Scripts {
    <script src="https://cdn.tiny.cloud/1/rkfxe461o9rhm9y5pasyuukghsi6ftjy9ohpay9bhwzulh89/tinymce/7/tinymce.min.js" referrerpolicy="origin"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // KHỞI TẠO TINYMCE
            tinymce.init({
                selector: '#NhanXet',
                plugins: 'advlist autolink lists link image charmap print preview anchor searchreplace visualblocks code fullscreen insertdatetime media table paste code help wordcount',
                toolbar: 'undo redo | formatselect | bold italic backcolor | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | removeformat | help',
                height: 350,
                menubar: 'file edit view insert format tools help',
                content_css: [
                    'https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css',
                ]
            });
        });
    </script>
}

<style>
    /* ... (CSS Styles giữ nguyên) ... */
</style>

<div class="row justify-content-center">
    <div class="col-lg-10 col-md-12">
        <div class="card form-card">
            <div class="form-header">
                <i class="fas fa-star-half-alt me-2"></i> @ViewBag.Title
            </div>
            <div class="card-body p-4 p-md-5">

                @* HIỂN THỊ CÁC LỖI VALIDATION VÀ LỖI SERVER TRÙNG LẶP *@
                @Html.ValidationSummary(false, "", new { @class = "alert alert-danger" })

                <form asp-action="CreateReview" method="post" class="row g-4">
                    @Html.AntiForgeryToken()

                    <div class="col-md-6">
                        <label asp-for="MaBacSi" class="form-label">Bác sĩ <span class="text-danger">*</span></label>
                        <select asp-for="MaBacSi" class="form-select">
                            <option value="">-- Chọn Bác sĩ --</option>
                            @if (doctors != null)
                            {
                                @foreach (var bs in doctors)
                                {
                                    <option value="@bs.MaBacSi">@bs.HoTen (@bs.Khoa?.TenKhoa)</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="MaBacSi" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="MaBenhNhan" class="form-label">Bệnh nhân <span class="text-danger">*</span></label>
                        <select asp-for="MaBenhNhan" class="form-select">
                            <option value="">-- Chọn Bệnh nhân --</option>
                            @if (patients != null)
                            {
                                @foreach (var p in patients)
                                {
                                    <option value="@p.MaBenhNhan">@p.HoTen (Mã: @p.MaBenhNhan)</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="MaBenhNhan" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="DiemDanhGia" class="form-label rating-label">
                            Điểm đánh giá
                            <i class="fas fa-star ms-2"></i>
                        </label>
                        <select asp-for="DiemDanhGia" class="form-select" required>
                            <option value="0">-- Chọn điểm --</option>
                            @foreach (var score in ratingScores)
                            {
                                <option value="@score" selected="@(Model?.DiemDanhGia == score)">@score sao</option>
                            }
                        </select>
                        <span asp-validation-for="DiemDanhGia" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="NgayDanhGia" class="form-label">Ngày đánh giá</label>
                        <input asp-for="NgayDanhGia" class="form-control" type="datetime-local" value="@initialDateTime" required />
                        <span asp-validation-for="NgayDanhGia" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="NhanXet" class="form-label">Nhận xét chi tiết</label>
                        <textarea asp-for="NhanXet" class="form-control" id="NhanXet" rows="10" placeholder="Nhập nhận xét chi tiết..."></textarea>
                        <span asp-validation-for="NhanXet" class="text-danger"></span>
                    </div>

                    <div class="col-12 d-flex justify-content-end pt-3 border-top mt-5">
                        <a href="/Admin/Reviews" class="btn btn-secondary btn-action me-3">
                            <i class="fas fa-arrow-left me-1"></i> Quay lại
                        </a>
                        <button type="submit" class="btn btn-primary btn-action">
                            <i class="fas fa-save me-1"></i> Lưu đánh giá
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>