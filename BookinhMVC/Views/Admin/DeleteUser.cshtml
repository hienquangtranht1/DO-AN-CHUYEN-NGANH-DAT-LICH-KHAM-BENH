@model BookinhMVC.Models.NguoiDung
@{
    Layout = "_AdminLayout";
    ViewBag.Active = "Users";
    ViewBag.Title = "Xác nhận Xóa Người dùng";
}

<div class="row">
    <div class="col-md-7 offset-md-2">
        <h2 class="mb-4 text-danger"><i class="fas fa-trash-alt me-2"></i>Xác nhận Xóa Người dùng</h2>
        <hr />

        <div class="alert alert-danger shadow-sm p-4" role="alert">
            <h4 class="alert-heading"><i class="fas fa-exclamation-triangle me-2"></i>Cảnh báo: Thao tác không thể hoàn tác!</h4>
            <p>
                Bạn có **chắc chắn** muốn xóa người dùng sau đây khỏi hệ thống không?
                Thao tác này sẽ **không thể hoàn tác** và có thể ảnh hưởng đến các dữ liệu liên quan (lịch hẹn, đánh giá, v.v.).
            </p>
        </div>

        <div class="card shadow-lg mb-4">
            <div class="card-header bg-warning text-dark fw-bold">
                <i class="fas fa-user-times me-1"></i> Thông tin Người dùng cần xóa
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">ID:</dt>
                    <dd class="col-sm-8">@Model.MaNguoiDung</dd>

                    <dt class="col-sm-4">Tên đăng nhập:</dt>
                    <dd class="col-sm-8"><span class="badge bg-danger fs-6">@Model.TenDangNhap</span></dd>

                    <dt class="col-sm-4">Vai trò:</dt>
                    <dd class="col-sm-8">
                        @if (Model.VaiTro == "Admin")
                        {
                            <span class="badge bg-danger"><i class="fas fa-crown me-1"></i> @Model.VaiTro</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary"><i class="fas fa-user me-1"></i> @Model.VaiTro</span>
                        }
                    </dd>

                    <dt class="col-sm-4">Ngày tạo:</dt>
                    <dd class="col-sm-8">@Model.NgayTao.ToString("dd/MM/yyyy")</dd>
                </dl>
            </div>
        </div>

        <form asp-action="DeleteUser" method="post">
            @* Dùng name thay vì asp-for để khớp với tham số trong DeleteUserConfirmed(int id) nếu không dùng model binding *@
            <input type="hidden" name="id" value="@Model.MaNguoiDung" />

            <button type="submit" class="btn btn-danger btn-lg me-2">
                <i class="fas fa-trash-alt me-1"></i> **Xác nhận XÓA**
            </button>
            <a href="/Admin/Users" class="btn btn-secondary btn-lg">
                <i class="fas fa-times me-1"></i> Hủy bỏ
            </a>
        </form>
    </div>
</div>