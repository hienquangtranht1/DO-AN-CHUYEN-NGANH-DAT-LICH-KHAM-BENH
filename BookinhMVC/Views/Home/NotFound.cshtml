@* File: Views/Home/NotFound.cshtml *@
@{
    // Thiết lập tiêu đề trang
    ViewData["Title"] = "Không tìm thấy trang";

    // Đảm bảo sử dụng Layout chung
    Layout = "~/Views/Shared/_Layout.cshtml";

    // Đặt mã trạng thái HTTP là 404 (Quan trọng cho SEO và server)
    if (Context.Response.StatusCode == 200)
    {
        Context.Response.StatusCode = 404;
    }
}

<div class="container text-center py-5">
    <div class="error-page">
        @* Icon báo lỗi lớn. Đảm bảo Font Awesome được nhúng trong _Layout.cshtml *@
        <i class="fas fa-exclamation-triangle text-warning mb-4" style="font-size: 100px;"></i>

        <h1 class="display-1 fw-bold text-primary">404</h1>

        <h2 class="mb-4">Rất tiếc! Không tìm thấy trang này</h2>

        <p class="lead text-muted mb-4">
            Trang bạn đang tìm kiếm có thể đã bị xóa, đổi tên hoặc không tồn tại.
            Nếu bạn được chuyển hướng đến trang này sau khi tìm kiếm bác sĩ,
            điều đó có nghĩa là không có kết quả nào phù hợp.
        </p>

        <div class="mt-5">
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-lg me-2">
                <i class="fas fa-home"></i> Quay về Trang chủ
            </a>
            <a href="javascript:history.back()" class="btn btn-outline-secondary btn-lg">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>
</div>

<style>
    .error-page {
        min-height: 60vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

        .error-page h1 {
            font-size: 120px;
            margin: 20px 0;
        }

        .error-page h2 {
            color: #333;
            font-weight: 600;
        }

        .error-page .lead {
            max-width: 600px;
            line-height: 1.6;
        }

    @@media (max-width: 768px) {
        .error-page h1

    {
        font-size: 80px;
    }

    .error-page i.fa-exclamation-triangle {
        font-size: 70px !important;
    }

    .btn-lg {
        padding: 10px 20px;
        font-size: 16px;
    }

    }
</style>