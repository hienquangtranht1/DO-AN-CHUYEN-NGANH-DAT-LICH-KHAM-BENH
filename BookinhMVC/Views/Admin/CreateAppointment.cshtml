@model BookinhMVC.Models.LichHen
@{
    Layout = "_AdminLayout";
    ViewBag.Active = "Appointments";
    ViewBag.Title = "Thêm Lịch hẹn";

    // Lấy dữ liệu từ ViewBag (Controller Admin đã cung cấp)
    var doctors = ViewBag.Doctors as List<BookinhMVC.Models.BacSi>;
    var patients = ViewBag.Patients as List<BookinhMVC.Models.BenhNhan>;
}

<style>
    /* VARIABLES */
    :root {
        --primary-color: #4f46e5;
        --success-color: #10b981;
        --text-primary: #1f2937;
        --text-secondary: #6b7280;
    }

    /* === FORM CARD STYLES === */
    .form-header {
        background: linear-gradient(135deg, var(--primary-color) 0%, #6366f1 100%);
        color: white;
        padding: 1.5rem 2rem;
        border-radius: 15px 15px 0 0;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        font-weight: 700;
        font-size: 1.5rem;
    }

    .form-card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

    .form-control, .form-select {
        border-radius: 8px;
        padding: 0.75rem 1rem;
        transition: all 0.3s;
    }

    .form-control:focus, .form-select:focus {
        border-color: var(--primary-color);
        box-shadow: 0 0 0 0.25rem rgba(79, 70, 229, 0.25);
    }

    .form-label {
        font-weight: 600;
        color: var(--text-primary);
        margin-bottom: 0.5rem;
    }

    .btn-action {
        padding: 0.75rem 1.5rem;
        border-radius: 50px;
        font-weight: 600;
        transition: all 0.3s;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .btn-primary {
        background-color: var(--primary-color);
        border-color: var(--primary-color);
    }

    .btn-primary:hover {
        background-color: #4338ca;
        border-color: #4338ca;
    }

    .btn-secondary {
        border-radius: 10px;
    }
</style>

<div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">
        <div class="card form-card">
            <div class="form-header">
                <i class="fas fa-calendar-plus me-2"></i> @ViewBag.Title
            </div>
            <div class="card-body p-4 p-md-5">

                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                <form asp-action="CreateAppointment" method="post" class="row g-4">
                    @Html.AntiForgeryToken()

                    <div class="col-12">
                        <label asp-for="MaBenhNhan" class="form-label">Bệnh nhân</label>
                        <select asp-for="MaBenhNhan" class="form-select" required>
                            <option value="">-- Chọn Bệnh nhân --</option>
                            @if (patients != null)
                            {
                                @foreach (var p in patients)
                                {
                                    <option value="@p.MaBenhNhan">@p.HoTen</option>
                                }
                            }
                            else
                            {
                                <option value="" disabled>-- Lỗi: Không tải được danh sách bệnh nhân --</option>
                            }
                        </select>
                        <span asp-validation-for="MaBenhNhan" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="MaBacSi" class="form-label">Bác sĩ</label>
                        <select asp-for="MaBacSi" class="form-select" required>
                            <option value="">-- Chọn Bác sĩ --</option>
                            @if (doctors != null)
                            {
                                @foreach (var bs in doctors)
                                {
                                    <option value="@bs.MaBacSi">@bs.HoTen</option>
                                }
                            }
                            else
                            {
                                <option value="" disabled>-- Không tải được danh sách bác sĩ --</option>
                            }
                        </select>
                        <span asp-validation-for="MaBacSi" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="NgayGio" class="form-label">Ngày giờ</label>
                        <input asp-for="NgayGio" class="form-control" type="datetime-local" required />
                        <span asp-validation-for="NgayGio" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="TrangThai" class="form-label">Trạng thái</label>
                        <select asp-for="TrangThai" class="form-select">
                            <option value="Chờ xác nhận">Chờ xác nhận</option>
                            <option value="Đã xác nhận">Đã xác nhận</option>
                            
                        </select>
                        <span asp-validation-for="TrangThai" class="text-danger"></span>
                    </div>

                    <div class="col-12 d-flex justify-content-end pt-3 border-top mt-5">
                        <a href="/Admin/Appointments" class="btn btn-secondary btn-action me-3">
                            <i class="fas fa-arrow-left me-1"></i> Quay lại
                        </a>
                        <button type="submit" class="btn btn-primary btn-action">
                            <i class="fas fa-save me-1"></i> Lưu lịch hẹn
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>