@model IEnumerable<BookinhMVC.Models.NguoiDung>
@{
    Layout = "_AdminLayout";
    ViewBag.Active = "Users"; // Đảm bảo mục "Người dùng" được active
    ViewBag.Title = "Quản lý Người dùng";

    // --- PHẦN GIẢ ĐỊNH DỮ LIỆU PHÂN TRANG TỪ CONTROLLER ---
    // Cần thay thế bằng logic thực tế trong Controller để truyền TotalPages và CurrentPage
    var totalPages = ViewBag.TotalPages ?? 5; // Ví dụ 5 trang
    var currentPage = ViewBag.CurrentPage ?? 1;
    var hasPreviousPage = currentPage > 1;
    var hasNextPage = currentPage < totalPages;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">

            <div class="management-header">
                <div class="header-content">
                    <div class="title-section">
                        <div class="icon-wrapper">
                            <i class="fas fa-users"></i>
                        </div>
                        <div>
                            <h2 class="main-title">@ViewBag.Title</h2>
                            <p class="subtitle">Danh sách và thông tin các tài khoản người dùng trong hệ thống</p>
                        </div>
                    </div>
                    @* <a href="/Admin/CreateUser" class="add-btn">
                        <i class="fas fa-plus"></i>
                        <span>Thêm người dùng mới</span>
                    </a> *@
                </div>
            </div>

            <div class="row mb-4 align-items-center">
                <div class="col-md-6">
                    <div class="input-group search-group">
                        <input type="text" id="searchInput" class="form-control" placeholder="Tìm kiếm theo Tên đăng nhập...">
                        <button class="btn btn-search" type="button"><i class="fas fa-search"></i></button>
                    </div>
                </div>
                <div class="col-md-6 text-md-end mt-2 mt-md-0">
                </div>
            </div>


            <div class="card shadow-lg rounded-4 data-table-container">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover table-striped mb-0" id="usersTable">
                            <thead class="bg-light">
                                <tr>
                                    <th style="width: 5%;">ID</th>
                                    <th style="width: 25%;">Tên đăng nhập</th>
                                    <th style="width: 15%;">Vai trò</th>
                                    @* <th style="width: 20%;">Ngày tạo</th> *@
                                    <th class="action-column text-center" style="width: 35%;">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    @foreach (var u in Model)
                                    {
                                        <tr data-username="@u.TenDangNhap.ToUpper()">
                                            <td class="align-middle">@u.MaNguoiDung</td>
                                            <td class="align-middle">@u.TenDangNhap</td>
                                            <td class="align-middle">
                                                @{
                                                    string roleClass = u.VaiTro switch
                                                    {
                                                        "Admin" => "bg-danger",
                                                        "BacSi" => "bg-info text-dark",
                                                        _ => "bg-secondary",
                                                    };
                                                    string roleIcon = u.VaiTro switch
                                                    {
                                                        "Admin" => "fas fa-crown",
                                                        "BacSi" => "fas fa-user-md",
                                                        _ => "fas fa-user",
                                                    };
                                                }
                                                <span class="badge badge-role @roleClass p-2 rounded-pill">
                                                    <i class="@roleIcon me-1"></i> @u.VaiTro
                                                </span>
                                            </td>
                                            @* <td class="align-middle text-secondary">
                                                @u.NgayTao.ToString("dd/MM/yyyy HH:mm")
                                            </td> *@
                                            <td class="align-middle action-column text-center">
                                                <a href="/Admin/UserDetails/@u.MaNguoiDung" class="btn btn-sm btn-outline-info me-1" title="Xem chi tiết">
                                                    <i class="fas fa-eye"></i> <span class="d-none d-lg-inline">Xem</span>
                                                </a>
                                                <a href="/Admin/EditUser/@u.MaNguoiDung" class="btn btn-sm btn-outline-warning me-1" title="Chỉnh sửa">
                                                    <i class="fas fa-edit"></i> <span class="d-none d-lg-inline">Sửa</span>
                                                </a>
                                                <a href="/Admin/DeleteUser/@u.MaNguoiDung" class="btn btn-sm btn-outline-danger delete-confirm" title="Xóa">
                                                    <i class="fas fa-trash-alt"></i> <span class="d-none d-lg-inline">Xóa</span>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center py-4 text-muted">Không có người dùng nào được tìm thấy.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                        @if (Model == null || !Model.Any())
                        {
                            <div class="empty-state mt-0" style="border-radius: 0 0 15px 15px; margin-top:0 !important; box-shadow:none;">
                                <div class="empty-icon">
                                    <i class="fas fa-user-slash"></i>
                                </div>
                                <h3>Không tìm thấy người dùng</h3>
                                <p>Hiện không có tài khoản nào trong hệ thống.</p>
                                <a href="/Admin/CreateUser" class="empty-action-btn">
                                    <i class="fas fa-plus"></i>
                                    <span>Thêm người dùng đầu tiên</span>
                                </a>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-5">
    <div class="col-12 d-flex justify-content-center">
        <div class="pagination-footer full-width">

            <a href="/Admin/Users?page=@(currentPage - 1)" class="pagination-arrow prev-arrow @(!hasPreviousPage ? "disabled" : "")">
                <i class="fas fa-chevron-left"></i>
                <span>Trước</span>
            </a>

            <nav class="d-none d-sm-block">
                <ul class="pagination justify-content-center mb-0">
                    @{
                        const int maxPageButtons = 5;
                        int startPage = Math.Max(1, currentPage - (maxPageButtons / 2));
                        int endPage = Math.Min(totalPages, startPage + maxPageButtons - 1);

                        if (endPage - startPage < maxPageButtons - 1)
                        {
                            startPage = Math.Max(1, endPage - maxPageButtons + 1);
                        }
                    }

                    @if (startPage > 1)
                    {
                        <li class="page-item"><a class="page-link page-num-link" href="/Admin/Users?page=1">1</a></li>
                        if (startPage > 2)
                        {
                            <li class="page-item disabled"><span class="page-link">...</span></li>
                        }
                    }

                    @for (int i = startPage; i <= endPage; i++)
                    {
                        <li class="page-item @(i == currentPage ? "active" : "")">
                            <a class="page-link page-num-link" href="/Admin/Users?page=@i">@i</a>
                        </li>
                    }

                    @if (endPage < totalPages)
                    {
                        if (endPage < totalPages - 1)
                        {
                            <li class="page-item disabled"><span class="page-link">...</span></li>
                        }
                        <li class="page-item"><a class="page-link page-num-link" href="/Admin/Users?page=@totalPages">@totalPages</a></li>
                    }
                </ul>
            </nav>

            <a href="/Admin/Users?page=@(currentPage + 1)" class="pagination-arrow next-arrow @(!hasNextPage ? "disabled" : "")">
                <span>Sau</span>
                <i class="fas fa-chevron-right"></i>
            </a>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // === Logic Tìm kiếm cơ bản (Client-side) ===
            const searchInput = document.getElementById('searchInput');
            const usersTable = document.getElementById('usersTable');
            const tableBody = usersTable ? usersTable.querySelector('tbody') : null;

            if (searchInput && usersTable) {
                searchInput.addEventListener('keyup', function () {
                    const filter = searchInput.value.toUpperCase();
                    const tableRows = tableBody.getElementsByTagName('tr');

                    for (let i = 0; i < tableRows.length; i++) {
                        // Bỏ qua hàng báo cáo rỗng
                        if (tableRows[i].querySelector('.text-muted[colspan="5"]')) continue;

                        // Lấy cột Tên đăng nhập (cột thứ 2, index 1)
                        const tdUsername = tableRows[i].getElementsByTagName('td')[1];

                        if (tdUsername) {
                            const txtValue = tdUsername.textContent || tdUsername.innerText;
                            if (txtValue.toUpperCase().indexOf(filter) > -1) {
                                tableRows[i].style.display = "";
                            } else {
                                tableRows[i].style.display = "none";
                            }
                        }
                    }
                });
            }

            // === Logic Xác nhận xóa (Client-side) ===
            document.querySelectorAll('.delete-confirm').forEach(button => {
                button.addEventListener('click', function (e) {
                    e.preventDefault();
                    const deleteUrl = this.href;

                    if (confirm("Bạn có chắc chắn muốn xóa người dùng này không? Hành động này không thể hoàn tác.")) {
                        window.location.href = deleteUrl;
                    }
                });
            });
        });
    </script>
}

<style>
    /* VARIABLES */
    :root {
        --primary-color: #4f46e5;
        --success-color: #10b981;
        --warning-color: #f59e0b;
        --danger-color: #ef4444;
        --text-primary: #1f2937;
        --text-secondary: #6b7280;
    }

    /* === HEADER MANAGEMENT SECTION STYLES === */
    .management-header {
        background: linear-gradient(135deg, var(--primary-color) 0%, #6366f1 100%);
        border-radius: 20px;
        padding: 1.5rem 2rem;
        margin-bottom: 1.5rem;
        color: white;
        box-shadow: 0 10px 30px rgba(79, 70, 229, 0.3);
    }

    .header-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .title-section {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .icon-wrapper {
        background: rgba(255, 255, 255, 0.2);
        padding: 0.75rem;
        border-radius: 50%;
        backdrop-filter: blur(5px);
    }

        .icon-wrapper i {
            font-size: 1.75rem;
            color: white;
        }

    .main-title {
        font-size: 1.75rem;
        font-weight: 700;
        margin: 0;
    }

    .subtitle {
        margin-top: 0.25rem;
        opacity: 0.9;
        font-size: 0.9rem;
    }

    .add-btn {
        background: var(--success-color);
        color: white;
        padding: 0.6rem 1.2rem;
        border-radius: 50px;
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(16, 185, 129, 0.3);
    }

        .add-btn:hover {
            background: #059669;
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(16, 185, 129, 0.4);
            color: white;
        }

    /* === SEARCH BAR STYLES === */
    .search-group input {
        border-radius: 10px 0 0 10px !important;
    }

    .search-group .btn-search {
        background: #f3f4f6;
        border-color: #d1d5db;
        color: var(--text-secondary);
        border-radius: 0 10px 10px 0 !important;
        transition: all 0.2s;
    }

        .search-group .btn-search:hover {
            background: #e5e7eb;
        }

    /* === TABLE STYLES === */
    .data-table-container {
        overflow-x: auto; /* Cho phép cuộn ngang trên mobile */
    }

    .table th {
        font-weight: 600;
        vertical-align: middle;
        white-space: nowrap;
    }

    .table td {
        white-space: nowrap;
        vertical-align: middle;
    }

    .action-column {
        min-width: 220px; /* Đảm bảo đủ chỗ cho 3 nút trên desktop */
    }

    .badge-role {
        font-weight: 600;
        text-transform: uppercase;
    }

    /* === ACTION BUTTONS (IN TABLE) === */
    .action-column .btn {
        padding: 6px 12px;
        border-radius: 8px;
        font-size: 0.85rem;
        font-weight: 500;
    }

    /* === EMPTY STATE STYLES === */
    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        background: white;
        border-radius: 20px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        margin-top: 2rem;
    }

    .empty-icon {
        width: 70px;
        height: 70px;
        background: linear-gradient(135deg, var(--primary-color), #6366f1);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.5rem;
    }

        .empty-icon i {
            font-size: 1.8rem;
            color: white;
        }

    .empty-state h3 {
        color: var(--text-primary);
        margin-bottom: 0.5rem;
        font-weight: 700;
    }

    .empty-state p {
        color: var(--text-secondary);
        margin-bottom: 1.5rem;
    }

    .empty-action-btn {
        background: linear-gradient(45deg, var(--primary-color), #6366f1);
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: 50px;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(79, 70, 229, 0.3);
    }

        .empty-action-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(79, 70, 229, 0.4);
            color: white;
        }

    /* === FOOTER PAGINATION STYLES === */
    .pagination-footer {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 1.5rem;
        padding: 1rem 0;
        flex-wrap: wrap;
        width: 100%;
    }

    .pagination-arrow {
        background: linear-gradient(135deg, var(--primary-color) 0%, #6366f1 100%);
        color: white;
        border: none;
        padding: 0.75rem 1.75rem;
        border-radius: 10px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        box-shadow: 0 4px 15px rgba(79, 70, 229, 0.3);
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        text-decoration: none;
    }

        .pagination-arrow:hover:not(.disabled) {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(79, 70, 229, 0.4);
            color: white;
        }

        .pagination-arrow.disabled {
            background: #e5e7eb;
            color: #9ca3af;
            cursor: not-allowed;
            box-shadow: none;
            pointer-events: none;
        }

    .prev-arrow i {
        margin-right: 0.5rem;
    }

    .next-arrow i {
        margin-left: 0.5rem;
    }

    /* Tùy chỉnh nút số trang */
    .pagination {
        margin-bottom: 0 !important;
    }

        .pagination .page-item .page-link {
            border-radius: 8px !important;
            margin: 0 4px;
            border-color: #e5e7eb;
            color: var(--text-primary);
            font-weight: 600;
            transition: all 0.2s;
            /* Kích thước thống nhất */
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .pagination .page-item.active .page-link {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
            color: white;
        }

        .pagination .page-item .page-link:hover {
            background-color: #f3f4f6;
            color: var(--primary-color);
        }

    /* === RESPONSIVE === */
    @@media (max-width: 991.98px) {
        /* Ẩn chữ trong nút thao tác trên tablet/mobile */
        .action-column .d-none.d-lg-inline

    {
        display: none !important;
    }

    .action-column .btn {
        padding: 8px; /* Tăng padding để chỉ còn icon vẫn dễ bấm */
        font-size: 0.9rem;
    }

    .action-column {
        min-width: 150px; /* Đảm bảo đủ chỗ cho 3 icon */
    }

    }

    @@media (max-width: 768px) {
        /* Phân trang xếp dọc trên mobile */
        .pagination-footer

    {
        flex-direction: column;
        gap: 1rem;
        width: 100%;
    }

    .pagination-arrow {
        width: 100%;
        justify-content: center;
        padding: 1rem;
    }

    .prev-arrow {
        flex-direction: row-reverse;
    }

        .prev-arrow i {
            margin-right: 0;
            margin-left: 0.5rem;
        }

    /* Ẩn nút số trang trên mobile nhỏ (sm) để tiết kiệm không gian */
    .pagination-footer nav.d-none.d-sm-block {
        display: none !important;
    }

    .management-header, .search-group {
        padding: 1rem;
    }

    }
</style>