@{
    ViewData["Title"] = "Reset Password";
}
<h3>Reset password</h3>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<form asp-action="ResetPassword" method="post" class="mt-3">
    @Html.AntiForgeryToken()
    <div class="mb-3">
        <label for="otp" class="form-label">OTP</label>
        <input name="otp" id="otp" type="text" class="form-control" required />
    </div>
    <div class="mb-3">
        <label for="newPassword" class="form-label">New password</label>
        <input name="newPassword" id="newPassword" type="password" class="form-control" required />
    </div>
    <div class="mb-3">
        <label for="confirmPassword" class="form-label">Confirm password</label>
        <input name="confirmPassword" id="confirmPassword" type="password" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Reset password</button>
    <a asp-action="Login" class="btn btn-link">Back to login</a>
</form>