@model BookinhMVC.Models.Khoa

@{
    // Thiết lập Layout chung cho trang quản trị
    Layout = "_AdminLayout";
    // Đánh dấu mục "Departments" trên menu là đang hoạt động
    ViewBag.Active = "Departments";
    // Tiêu đề của trang
    ViewBag.Title = "Chi tiết Khoa";
}

@section Styles {
    <style>
        /* CSS tùy chỉnh cho danh sách chi tiết, sử dụng biến CSS từ Layout */
        .detail-list dt {
            font-weight: 600; /* Nhãn đậm hơn */
            color: var(--text-primary); /* Sử dụng biến màu Text Primary */
            margin-bottom: 15px;
        }

        .detail-list dd {
            margin-bottom: 15px;
        }

        .detail-value h4 {
            margin-bottom: 0 !important;
        }

        /* Loại bỏ white-space: pre-wrap và chuyển sang hiển thị HTML */
        .description-content {
            font-size: 1rem;
            color: var(--text-secondary) !important; /* Đảm bảo màu sắc hiển thị đúng */
        }

        /* Nút hành động */
        .btn-warning {
            background-color: var(--warning-color);
            border-color: var(--warning-color);
            color: var(--text-primary);
        }

            .btn-warning:hover {
                background-color: #e69100;
                border-color: #e69100;
            }

        .btn-danger {
            background-color: var(--danger-color);
            border-color: var(--danger-color);
        }

            .btn-danger:hover {
                background-color: #c72c3b;
                border-color: #c72c3b;
            }

        /* Đồng bộ màu header */
        .card-header.bg-primary {
            background: linear-gradient(135deg, var(--primary-color) 0%, #6366f1 100%) !important;
        }
    </style>
}

<div class="container-fluid py-4">

    <h2 class="fw-bolder text-primary mb-5">
        <i class="fas fa-search me-2"></i> @ViewBag.Title
    </h2>

    <div class="card shadow-lg rounded-4 border-0">
        <div class="card-header bg-primary text-white py-3 rounded-top-4">
            <h5 class="mb-0 fw-bold">
                <i class="fas fa-building me-2"></i> Thông tin Khoa: @Model.TenKhoa
            </h5>
        </div>

        <div class="card-body p-5">
            <dl class="row detail-list">
                <dt class="col-sm-3 detail-label">Mã Khoa:</dt>
                <dd class="col-sm-9 detail-value">
                    <span class="badge bg-secondary fs-6">#@Model.MaKhoa</span>
                </dd>

                <dt class="col-sm-3 detail-label">Tên Khoa:</dt>
                <dd class="col-sm-9 detail-value">
                    <h4 class="text-primary fw-bolder mb-0">@Model.TenKhoa</h4>
                </dd>

                <dt class="col-sm-3 detail-label border-top pt-3">Mô tả chi tiết:</dt>
                <dd class="col-sm-9 detail-value border-top pt-3">
                    <div class="p-3 bg-light rounded border description-content">
                        @Html.Raw(Model.MoTa)
                    </div>
                </dd>

            </dl>
        </div>

        <div class="card-footer bg-light border-top py-3 d-flex justify-content-end">

            <a href="/Admin/EditDepartment/@Model.MaKhoa" class="btn btn-warning me-2 fw-bold">
                <i class="fas fa-edit me-2"></i> Chỉnh sửa
            </a>

            <button type="button" class="btn btn-danger me-2 fw-bold"
                    onclick="confirmDelete('@Model.TenKhoa', '@Model.MaKhoa')">
                <i class="fas fa-trash-alt me-2"></i> Xóa
            </button>

            <a href="/Admin/Departments" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i> Quay lại
            </a>
        </div>
    </div>
</div>

<script>
    function confirmDelete(name, id) {
        if (confirm(`Bạn có chắc chắn muốn xóa Khoa "${name}" (Mã: ${id}) không? Hành động này không thể hoàn tác.`)) {
            // Chuyển hướng đến trang xóa nếu người dùng đồng ý.
            window.location.href = `/Admin/DeleteDepartment/${id}`;
        }
    }
</script>