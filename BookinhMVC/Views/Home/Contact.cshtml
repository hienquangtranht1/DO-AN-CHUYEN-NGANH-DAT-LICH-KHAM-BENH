@* File: Views/Home/Contact.cshtml *@
@{
    ViewData["Title"] = "Liên hệ - Four Rock";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@* HEADER & BREADCRUMB (Đồng bộ với các trang dịch vụ) *@
<section class="blog-header fade-in" data-aos="fade-down" style="
    background-image: url('/images/background.png');
    background-size: cover;
    background-position: center;
    position: relative;
    min-height: 250px;
    display: flex;
    flex-direction: column;
    border-radius: 0 0 1.5rem 1.5rem;
    overflow: hidden;
">
    <div style="position: absolute; top: 0; left: 0; right: 0; bottom: 0;"></div> @* Overlay tối màu *@
    <div class="container position-relative z-2 flex-grow-1 d-flex align-items-center justify-content-center text-center pt-5">
        <div>
            <h1 class="display-4 fw-bold text-dark mb-2">
                <i class="fas fa-phone-alt me-3"></i>Liên hệ với Four Rock
            </h1>
            <p class="lead text-dark-50">Chúng tôi luôn sẵn sàng hỗ trợ bạn 24/7. Hãy liên hệ ngay hôm nay!</p>
        </div>
    </div>

    <div class="breadcrumb-section position-absolute bottom-0 w-100 py-3 z-3">
        <div class="container">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 justify-content-center">
                    <li class="breadcrumb-item"><a href="/" class="text-dark text-decoration-none"><i class="fas fa-home me-1"></i>Trang chủ</a></li>
                    <li class="breadcrumb-item active text-dark" aria-current="page"><i class="fas fa-phone-alt me-1"></i>Liên hệ</li>
                </ol>
            </nav>
        </div>
    </div>
</section>

<section class="py-5 bg-light">
    <div class="container">
        <div class="section-header text-center mb-5" data-aos="fade-up">
            <h2 class="display-5 fw-bold mb-2">
                <i class="fas fa-envelope-open-text text-primary me-2"></i>Gửi tin nhắn cho chúng tôi
            </h2>
            <div class="header-line mx-auto"></div>
        </div>

        <div class="row g-5">
            @* Cột 1: Thông tin liên hệ *@
            <div class="col-lg-5" data-aos="fade-right">
                <h4 class="fw-bold text-primary mb-4"><i class="fas fa-headset me-2"></i>Thông tin liên hệ trực tiếp</h4>

                <div class="contact-detail p-3 mb-3 rounded-3 bg-white shadow-sm border">
                    <p class="fw-bold mb-1 text-dark"><i class="fas fa-map-marker-alt me-2 text-info"></i>Địa chỉ chính</p>
                    <p class="text-secondary mb-0">123 Đường Sức Khỏe, Quận 1, TP. Hồ Chí Minh</p>
                </div>

                <div class="contact-detail p-3 mb-3 rounded-3 bg-white shadow-sm border">
                    <p class="fw-bold mb-1 text-dark"><i class="fas fa-phone-alt me-2 text-info"></i>Hotline 24/7</p>
                    <p class="text-secondary mb-0 fw-bold fs-5">(+84) 1900 1234</p>
                </div>

                <div class="contact-detail p-3 mb-3 rounded-3 bg-white shadow-sm border">
                    <p class="fw-bold mb-1 text-dark"><i class="fas fa-envelope me-2 text-info"></i>Email Hỗ trợ</p>
                    <p class="text-secondary mb-0">contact@fourrockhospital.com</p>
                </div>

                <div class="contact-detail p-3 mb-3 rounded-3 bg-white shadow-sm border">
                    <p class="fw-bold mb-1 text-dark"><i class="fas fa-clock me-2 text-info"></i>Giờ làm việc</p>
                    <p class="text-secondary mb-0">Thứ 2 - Thứ 7: 8:00 - 17:00</p>
                </div>
            </div>

            @* Cột 2: Form liên hệ *@
            <div class="col-lg-7" data-aos="fade-left">
                <h4 class="fw-bold text-primary mb-4"><i class="fas fa-comment-dots me-2"></i>Form gửi tin nhắn</h4>
                <div class="p-4 rounded-4 bg-white shadow-lg">
                    <form onsubmit="event.preventDefault(); alert('Cảm ơn bạn đã gửi tin nhắn! Chúng tôi sẽ phản hồi sớm nhất.');" class="row g-3">
                        <div class="col-md-6">
                            <input type="text" class="form-control rounded-3 py-2" placeholder="Họ và tên" required>
                        </div>
                        <div class="col-md-6">
                            <input type="email" class="form-control rounded-3 py-2" placeholder="Email của bạn" required>
                        </div>
                        <div class="col-12">
                            <input type="text" class="form-control rounded-3 py-2" placeholder="Tiêu đề (Vấn đề bạn cần hỗ trợ)" required>
                        </div>
                        <div class="col-12">
                            <textarea class="form-control rounded-3" rows="5" placeholder="Nội dung chi tiết" required></textarea>
                        </div>
                        <div class="col-12 text-center mt-4">
                            <button type="submit" class="btn btn-primary btn-lg rounded-pill px-5 fw-bold">
                                <i class="fas fa-paper-plane me-2"></i> Gửi đi
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="py-5 bg-white">
    <div class="container">
        <div class="section-header text-center mb-5" data-aos="fade-up">
            <h2 class="display-5 fw-bold mb-2">
                <i class="fas fa-map-marker-alt text-primary me-2"></i>Vị trí Bệnh viện
            </h2>
            <div class="header-line mx-auto"></div>
        </div>

        <div class="map-responsive rounded-4 shadow-lg overflow-hidden" data-aos="zoom-in">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3724.538328585009!2d106.78303187480614!3d10.855738189297877!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3175276e7ea103df%3A0xb6cf10bb7d719327!2sHUTECH%20University%20-%20Thu%20Duc%20Campus!5e1!3m2!1sen!2s!4v1760451196870!5m2!1sen!2s" width="1600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
    </div>
</section>


<style>
    /* Định nghĩa các biến màu nếu chưa có trong _Layout.cshtml */
    :root {
        --primary-color: #0d6efd; /* Blue */
        --secondary-color: #6c757d; /* Gray */
        --accent-color: #0dcaf0; /* Cyan/Light Blue */
        --text-dark: #212529;
    }

    /* === Đồng bộ Style cho Section Header === */
    .section-header {
        margin-bottom: 3rem;
    }

        .section-header h2 {
            color: var(--text-dark);
            font-weight: 700;
            font-size: 2.5rem;
        }

    .header-line {
        width: 80px;
        height: 4px;
        background: linear-gradient(90deg, var(--primary-color), var(--accent-color));
        border-radius: 2px;
        margin-top: 10px;
    }

    /* === Header Section (từ Blog) === */
    .blog-header {
        position: relative;
        border-radius: 0 0 1.5rem 1.5rem;
        min-height: 250px;
        z-index: 1;
    }

    /* === Contact Detail Cards === */
    .contact-detail {
        transition: all 0.3s ease;
        border: 1px solid #e9ecef !important;
    }

        .contact-detail:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(13, 110, 253, 0.1) !important;
        }

        .contact-detail i {
            font-size: 1.2rem;
        }

    .social-links a {
        color: var(--primary-color);
        margin-right: 1rem;
        font-size: 1.5rem;
        transition: color 0.2s;
    }

        .social-links a:hover {
            color: var(--accent-color);
        }

    /* === Map Styling === */
    .map-responsive {
        position: relative;
        padding-bottom: 56.25%; /* 16:9 Aspect Ratio */
        height: 0;
        overflow: hidden;
    }

        .map-responsive iframe {
            position: absolute;
            top: 0;
            left: 0;
            width: 100% !important;
            height: 100% !important;
            border-radius: 1rem;
        }

    /* Responsive */
    @@media (max-width: 768px) {
        .blog-header {
            min-height: 220px;
        }

        .section-header h2 {
            font-size: 2rem;
        }
    }
</style>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>
    <script>
        AOS.init({
            duration: 800,
            once: true,
            offset: 50
        });
    </script>
}