@model IEnumerable<BookinhMVC.Models.BenhNhan>
@{
    Layout = "_AdminLayout";
    ViewBag.Active = "Patients";
    ViewBag.Title = "Quản lý Bệnh nhân";

    // --- PHẦN GIẢ ĐỊNH DỮ LIỆU PHÂN TRANG TỪ CONTROLLER ---
    var totalPages = ViewBag.TotalPages ?? 3; // Ví dụ 5 trang
    var currentPage = ViewBag.CurrentPage ?? 1;
    var hasPreviousPage = currentPage > 1;
    var hasNextPage = currentPage < totalPages;
}

@section Styles {
    <style>
        /* VARIABLES (Đồng bộ với Layout và các trang khác) */
        :root {
            --primary-color: #4f46e5; /* Sử dụng màu chính từ _AdminLayout */
            --success-color: #10b981;
            --warning-color: #f59e0b;
            --danger-color: #ef4444;
            --text-primary: #1f2937;
            --text-secondary: #6b7280;
            --info-gender: #0d6efd; /* Xanh dương cho Nam */
            --danger-gender: #dc3545; /* Đỏ cho Nữ */
        }

        /* === PAGE HEADER VÀ THỐNG KÊ (Đồng bộ style Gradient Header) === */
        .management-header {
            background: linear-gradient(135deg, var(--primary-color) 0%, #6366f1 100%);
            border-radius: 20px;
            padding: 1.5rem 2rem;
            margin-bottom: 1.5rem;
            color: white;
            box-shadow: 0 10px 30px rgba(79, 70, 229, 0.3);
        }

        .header-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 1rem;
        }

        .title-section {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .icon-wrapper {
            background: rgba(255, 255, 255, 0.2);
            padding: 0.75rem;
            border-radius: 50%;
            backdrop-filter: blur(5px);
        }

            .icon-wrapper i {
                font-size: 1.75rem;
                color: white;
            }

        .main-title {
            font-size: 1.75rem;
            font-weight: 700;
            margin: 0;
        }

        .subtitle {
            margin-top: 0.25rem;
            opacity: 0.9;
            font-size: 0.9rem;
        }

        .add-btn {
            background: var(--success-color);
            color: white;
            padding: 0.6rem 1.2rem;
            border-radius: 50px;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-weight: 600;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(16, 185, 129, 0.3);
        }

            .add-btn:hover {
                background: #059669;
                transform: translateY(-2px);
                box-shadow: 0 6px 20px rgba(16, 185, 129, 0.4);
                color: white;
            }

        /* === SEARCH VÀ FILTER (Đồng bộ style input) === */
        .search-group input, .form-select {
            border-radius: 8px;
            padding: 0.6rem 1rem;
        }

            .search-group input:focus, .form-select:focus {
                border-color: var(--primary-color);
                box-shadow: 0 0 0 0.25rem rgba(79, 70, 229, 0.25);
            }

        /* === TABLE STYLES (Đồng bộ Doctors/Users table) === */
        .data-table-container {
            overflow-x: auto;
            border-radius: 12px;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
            background: white;
        }

        .table th {
            background: var(--primary-color);
            color: white;
            font-weight: 600;
            vertical-align: middle;
            white-space: nowrap;
            border: none;
            font-size: 0.9rem;
        }

        .table td {
            white-space: nowrap;
            vertical-align: middle;
        }

        .action-column {
            min-width: 220px;
        }

        .patient-table-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            object-fit: cover;
            background: #e0e7ff;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            color: var(--primary-color);
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            font-size: 1rem;
        }

        /* Badge giới tính */
        .gender-badge {
            font-weight: 600;
            padding: 0.4em 0.8em;
            border-radius: 20px;
            color: white;
            font-size: 0.85rem;
        }

            .gender-badge.male {
                background-color: var(--info-gender);
            }

            .gender-badge.female {
                background-color: var(--danger-gender);
            }

        /* Nút hành động */
        .action-btn {
            border-radius: 8px;
            padding: 6px 10px;
            font-weight: 500;
            background: none !important;
            border: 1px solid;
        }

        .btn-view {
            border-color: #0dcaf0;
            color: #0dcaf0;
        }

            .btn-view:hover {
                background-color: #0dcaf0;
                color: white;
            }

        .btn-edit {
            border-color: var(--warning-color);
            color: var(--warning-color);
        }

            .btn-edit:hover {
                background-color: var(--warning-color);
                color: white;
            }

        .btn-delete {
            border-color: var(--danger-gender);
            color: var(--danger-gender);
        }

            .btn-delete:hover {
                background-color: var(--danger-gender);
                color: white;
            }


        /* === FOOTER PAGINATION STYLES (Đồng bộ) === */
        .pagination-footer {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 1.5rem;
            padding: 1rem 0;
            flex-wrap: wrap;
            width: 100%;
        }

        .pagination-arrow {
            background: linear-gradient(135deg, var(--primary-color) 0%, #6366f1 100%);
            color: white;
            border: none;
            padding: 0.75rem 1.75rem;
            border-radius: 10px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            box-shadow: 0 4px 15px rgba(79, 70, 229, 0.3);
            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            text-decoration: none;
        }

            .pagination-arrow:hover:not(.disabled) {
                transform: translateY(-2px);
                box-shadow: 0 6px 20px rgba(79, 70, 229, 0.4);
                color: white;
            }

            .pagination-arrow.disabled {
                background: #e5e7eb;
                color: #9ca3af;
                cursor: not-allowed;
                box-shadow: none;
                pointer-events: none;
            }

        .prev-arrow i {
            margin-right: 0.5rem;
        }

        .next-arrow i {
            margin-left: 0.5rem;
        }

        /* Tùy chỉnh nút số trang */
        .pagination {
            margin-bottom: 0 !important;
        }

            .pagination .page-item .page-link {
                border-radius: 8px !important;
                margin: 0 4px;
                border-color: #e5e7eb;
                color: var(--text-primary);
                font-weight: 600;
                transition: all 0.2s;
                width: 40px;
                height: 40px;
                display: flex;
                align-items: center;
                justify-content: center;
            }

            .pagination .page-item.active .page-link {
                background-color: var(--primary-color);
                border-color: var(--primary-color);
                color: white;
            }

            .pagination .page-item .page-link:hover {
                background-color: #f3f4f6;
                color: var(--primary-color);
            }

        /* === RESPONSIVE TABLE & PAGINATION === */
        @@media (max-width: 991.98px) {
            .action-column .d-none.d-lg-inline {
                display: none !important;
            }

            .action-column .btn {
                padding: 8px;
                font-size: 0.9rem;
            }

            .action-column {
                min-width: 150px;
            }

            .table th, .table td {
                padding: 10px;
                font-size: 0.9rem;
            }
        }

        @@media (max-width: 768px) {
            .management-header {
                padding: 1rem;
            }

            .header-content {
                flex-direction: column;
                align-items: center;
            }

            .title-section {
                text-align: center;
                flex-direction: column;
                gap: 0.5rem;
            }
            /* Phân trang xếp dọc trên mobile */
            .pagination-footer {
                flex-direction: column;
                gap: 1rem;
                width: 100%;
            }

            .pagination-arrow {
                width: 100%;
                justify-content: center;
                padding: 1rem;
            }

            .prev-arrow {
                flex-direction: row-reverse;
            }

                .prev-arrow i {
                    margin-right: 0;
                    margin-left: 0.5rem;
                }
            /* Ẩn nút số trang trên mobile nhỏ (sm) để tiết kiệm không gian */
            .pagination-footer nav.d-none.d-sm-block {
                display: none !important;
            }
        }
    </style>
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">

            <div class="management-header">
                <div class="header-content">
                    <div class="title-section">
                        <div class="icon-wrapper">
                            <i class="fas fa-hospital-user"></i>
                        </div>
                        <div>
                            <h2 class="main-title">@ViewBag.Title</h2>
                            <p class="subtitle">Danh sách và thông tin các bệnh nhân trong hệ thống</p>
                        </div>
                    </div>
                    <a href="/Admin/CreatePatient" class="add-btn">
                        <i class="fas fa-plus"></i>
                        <span>Thêm bệnh nhân mới</span>
                    </a>
                </div>
            </div>

            <div class="row mb-4 align-items-center">
                <div class="col-md-6">
                    <div class="input-group search-group">
                        <input type="text" id="searchInput" class="form-control" placeholder="Tìm kiếm theo tên, số điện thoại, email...">
                        <button class="btn btn-search" type="button"><i class="fas fa-search"></i></button>
                    </div>
                </div>
                <div class="col-md-3 mt-2 mt-md-0">
                    <select class="form-select filter-select" id="genderFilter">
                        <option value="">Tất cả giới tính</option>
                        <option value="Nam">Nam</option>
                        <option value="Nữ">Nữ</option>
                    </select>
                </div>
                <div class="col-md-3 mt-2 mt-md-0">
                    <select class="form-select filter-select" id="sortBy">
                        <option value="id">Sắp xếp theo ID</option>
                        <option value="name">Sắp xếp theo tên</option>
                    </select>
                </div>
            </div>

            <div class="card data-table-container">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover table-striped mb-0" id="patientsTable">
                            <thead>
                                <tr>
                                    <th style="width: 8%;">ID</th>
                                    <th style="width: 20%;">Họ tên</th>
                                    <th style="width: 12%;">Giới tính</th>
                                    <th style="width: 15%;">SĐT</th>
                                    <th style="width: 25%;">Email</th>
                                    <th style="width: 20%;" class="action-column text-center">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody id="patientTableBody">
                                @if (Model != null && Model.Any())
                                {
                                    @foreach (var p in Model)
                                    {
                                        <tr class="patient-row" data-id="@p.MaBenhNhan" data-name="@p.HoTen?.ToLower()" data-phone="@p.SoDienThoai" data-email="@p.Email?.ToLower()" data-gender="@p.GioiTinh">
                                            <td class="fw-bold" style="color: var(--primary-main);">#@p.MaBenhNhan</td>
                                            <td class="fw-bold text-dark">
                                                @p.HoTen
                                            </td>
                                            <td>
                                                @if (p.GioiTinh == "Nam")
                                                {
                                                    <span class="gender-badge male">
                                                        <i class="fas fa-mars"></i> Nam
                                                    </span>
                                                }
                                                else if (p.GioiTinh == "Nữ")
                                                {
                                                    <span class="gender-badge female">
                                                        <i class="fas fa-venus"></i> Nữ
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Khác</span>
                                                }
                                            </td>
                                            <td class="text-dark">@p.SoDienThoai</td>
                                            <td class="text-dark">@p.Email</td>
                                            <td class="align-middle action-column text-center">
                                                <a href="/Admin/PatientDetails/@p.MaBenhNhan" class="btn btn-sm btn-outline-info me-1" title="Xem chi tiết">
                                                    <i class="fas fa-eye"></i> <span class="d-none d-lg-inline">Xem</span>
                                                </a>
                                                <a href="/Admin/EditPatient/@p.MaBenhNhan" class="btn btn-sm btn-outline-warning me-1" title="Chỉnh sửa">
                                                    <i class="fas fa-edit"></i> <span class="d-none d-lg-inline">Sửa</span>
                                                </a>
                                                <a href="/Admin/DeletePatient/@p.MaBenhNhan" class="btn btn-sm btn-outline-danger delete-confirm" title="Xóa">
                                                    <i class="fas fa-trash-alt"></i> <span class="d-none d-lg-inline">Xóa</span>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6" class="text-center py-4 text-muted">Không có bệnh nhân nào được tìm thấy.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                        @if (Model == null || !Model.Any())
                        {
                            <div class="empty-state mt-0" style="border-radius: 0 0 15px 15px; margin-top:0 !important; box-shadow:none;">
                                <div class="empty-icon">
                                    <i class="fas fa-hospital-user"></i>
                                </div>
                                <h3>Chưa có bệnh nhân nào</h3>
                                <p>Hãy thêm bệnh nhân đầu tiên để bắt đầu quản lý</p>
                                <a href="/Admin/CreatePatient" class="empty-action-btn">
                                    <i class="fas fa-plus"></i>
                                    <span>Thêm bệnh nhân đầu tiên</span>
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-5">
    <div class="col-12 d-flex justify-content-center">
        <div class="pagination-footer full-width">

            <a href="/Admin/Patients?page=@(currentPage - 1)" class="pagination-arrow prev-arrow @(!hasPreviousPage ? "disabled" : "")">
                <i class="fas fa-chevron-left"></i>
                <span>Trước</span>
            </a>

            <nav class="d-none d-sm-block">
                <ul class="pagination justify-content-center mb-0">
                    @{
                        const int maxPageButtons = 5;
                        int startPage = Math.Max(1, currentPage - (maxPageButtons / 2));
                        int endPage = Math.Min(totalPages, startPage + maxPageButtons - 1);

                        if (endPage - startPage < maxPageButtons - 1)
                        {
                            startPage = Math.Max(1, endPage - maxPageButtons + 1);
                        }
                    }

                    @if (startPage > 1)
                    {
                        <li class="page-item"><a class="page-link page-num-link" href="/Admin/Patients?page=1">1</a></li>
                        if (startPage > 2)
                        {
                            <li class="page-item disabled"><span class="page-link">...</span></li>
                        }
                    }

                    @for (int i = startPage; i <= endPage; i++)
                    {
                        <li class="page-item @(i == currentPage ? "active" : "")">
                            <a class="page-link page-num-link" href="/Admin/Patients?page=@i">@i</a>
                        </li>
                    }

                    @if (endPage < totalPages)
                    {
                        if (endPage < totalPages - 1)
                        {
                            <li class="page-item disabled"><span class="page-link">...</span></li>
                        }
                        <li class="page-item"><a class="page-link page-num-link" href="/Admin/Patients?page=@totalPages">@totalPages</a></li>
                    }
                </ul>
            </nav>

            <a href="/Admin/Patients?page=@(currentPage + 1)" class="pagination-arrow next-arrow @(!hasNextPage ? "disabled" : "")">
                <span>Sau</span>
                <i class="fas fa-chevron-right"></i>
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // === Hàm lọc và tìm kiếm (Client-side) ===
        function filterTable() {
            const searchValue = document.getElementById('searchInput').value.toLowerCase();
            const genderValue = document.getElementById('genderFilter').value;
            const rows = document.querySelectorAll('.patient-row');

            rows.forEach(row => {
                const name = row.getAttribute('data-name') || '';
                const phone = row.getAttribute('data-phone') || '';
                const email = row.getAttribute('data-email') || '';
                const gender = row.getAttribute('data-gender') || '';

                // Lọc theo tên, SĐT hoặc email
                const matchSearch = name.includes(searchValue) ||
                                    phone.includes(searchValue) ||
                                    email.includes(searchValue);
                // Lọc theo giới tính
                const matchGender = !genderValue || gender === genderValue;

                if (matchSearch && matchGender) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        }

        // === Hàm sắp xếp (Client-side) ===
        function sortTable() {
            const sortBy = document.getElementById('sortBy').value;
            const tbody = document.getElementById('patientTableBody');
            const rows = Array.from(tbody.querySelectorAll('.patient-row'));

            rows.sort((a, b) => {
                let valA, valB;

                if (sortBy === 'name') {
                    valA = a.getAttribute('data-name');
                    valB = b.getAttribute('data-name');
                    return valA.localeCompare(valB, 'vi');
                } else { // Sắp xếp theo ID
                    valA = parseInt(a.getAttribute('data-id'));
                    valB = parseInt(b.getAttribute('data-id'));
                    return valA - valB;
                }
            });

            rows.forEach(row => tbody.appendChild(row));
        }

        // === Sự kiện DOM Loaded ===
        document.addEventListener('DOMContentLoaded', function () {
            // Gắn sự kiện cho các ô tìm kiếm và lọc
            document.getElementById('searchInput').addEventListener('keyup', filterTable);
            document.getElementById('genderFilter').addEventListener('change', filterTable);
            document.getElementById('sortBy').addEventListener('change', sortTable);

            // Chạy sắp xếp theo ID mặc định khi load trang
            sortTable();

            // Logic xác nhận xóa (Sử dụng confirm() trong HTML)
            document.querySelectorAll('.delete-confirm').forEach(button => {
                button.addEventListener('click', function (e) {
                    e.preventDefault(); // Ngăn chặn hành động mặc định của nút (chuyển hướng)
                    const deleteUrl = this.href;

                    if (confirm("Bạn có chắc chắn muốn xóa bệnh nhân này không? Hành động này không thể hoàn tác.")) {
                        window.location.href = deleteUrl;
                    }
                });
            });
        });
    </script>
}