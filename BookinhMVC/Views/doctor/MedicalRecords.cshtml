@model List<BookinhMVC.Models.MedicalRecordViewModel>
@{
    Layout = "~/Views/Shared/_DoctorLayout.cshtml";
    ViewBag.Title = "Danh sách bệnh án";
    var request = Context.Request;
    var currentDoctorId = Context.Session.GetInt32("MaBacSi");
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />


<style>
    .medical-records-container {
        max-width: 1400px;
        margin: 0 auto;
    }

    /* Alerts */
    .alert-custom {
        padding: 16px 20px;
        border-radius: 12px;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 12px;
        font-weight: 500;
        animation: slideDown 0.3s ease;
    }

    .alert-success-custom {
        background: #d1fae5;
        color: #065f46;
        border-left: 4px solid #10b981;
    }

    .alert-danger-custom {
        background: #fee2e2;
        color: #991b1b;
        border-left: 4px solid #ef4444;
    }

    @@keyframes slideDown {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .page-header {
        background: white;
        padding: 24px 28px;
        border-radius: 16px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        margin-bottom: 24px;
        border-left: 5px solid #8b5cf6;
    }

        .page-header h2 {
            margin: 0;
            color: #1e293b;
            font-weight: 700;
            font-size: 1.75rem;
            display: flex;
            align-items: center;
            gap: 12px;
        }

            .page-header h2 i {
                color: #8b5cf6;
            }

    .toolbar-card {
        background: white;
        padding: 24px 28px;
        border-radius: 16px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        margin-bottom: 24px;
    }

    .toolbar-form {
        display: flex;
        align-items: center;
        gap: 12px;
        flex-wrap: wrap;
    }

    .search-input-group {
        flex: 1;
        min-width: 280px;
        position: relative;
    }

        .search-input-group input {
            width: 100%;
            padding: 12px 16px 12px 44px;
            border: 2px solid #e2e8f0;
            border-radius: 10px;
            font-size: 0.95rem;
            transition: all 0.3s ease;
        }

            .search-input-group input:focus {
                outline: none;
                border-color: #8b5cf6;
                box-shadow: 0 0 0 3px rgba(139, 92, 246, 0.1);
            }

        .search-input-group i {
            position: absolute;
            left: 16px;
            top: 50%;
            transform: translateY(-50%);
            color: #94a3b8;
        }

    .btn-search {
        padding: 12px 28px;
        background: linear-gradient(135deg, #8b5cf6, #7c3aed);
        color: white;
        border: none;
        border-radius: 10px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .btn-search:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(139, 92, 246, 0.4);
        }

    .btn-add {
        padding: 12px 28px;
        background: linear-gradient(135deg, #10b981, #059669);
        color: white;
        border: none;
        border-radius: 10px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .btn-add:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(16, 185, 129, 0.4);
        }

    .table-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        overflow: hidden;
    }

    .medical-table {
        width: 100%;
        margin: 0;
        border-collapse: separate;
        border-spacing: 0;
    }

        .medical-table thead {
            background: linear-gradient(135deg, #f8fafc, #f1f5f9);
        }

            .medical-table thead th {
                padding: 18px 16px;
                font-weight: 700;
                color: #1e293b;
                text-align: left;
                border-bottom: 2px solid #e2e8f0;
                font-size: 0.9rem;
                text-transform: uppercase;
                letter-spacing: 0.5px;
            }

        .medical-table tbody tr {
            transition: all 0.2s ease;
            border-bottom: 1px solid #f1f5f9;
        }

            .medical-table tbody tr:hover {
                background: #f8fafc;
            }

        .medical-table tbody td {
            padding: 16px;
            color: #475569;
            font-size: 0.9rem;
            vertical-align: middle;
        }

    .patient-cell {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .patient-avatar {
        width: 40px;
        height: 40px;
        background: linear-gradient(135deg, #f59e0b, #f97316);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: 700;
        font-size: 1rem;
    }

    .patient-name {
        font-weight: 600;
        color: #1e293b;
    }

    .doctor-info {
        display: flex;
        flex-direction: column;
        gap: 4px;
    }

    .doctor-name {
        font-weight: 600;
        color: #1e293b;
    }

    .owner-badge {
        display: inline-flex;
        align-items: center;
        gap: 4px;
        padding: 4px 10px;
        background: linear-gradient(135deg, #10b981, #059669);
        color: white;
        border-radius: 12px;
        font-size: 0.75rem;
        font-weight: 600;
    }

    .date-display {
        display: flex;
        align-items: center;
        gap: 8px;
        color: #64748b;
        font-weight: 500;
    }

        .date-display i {
            color: #8b5cf6;
        }

    .editable-field {
        padding: 10px 14px;
        border: 2px solid #e2e8f0;
        border-radius: 8px;
        width: 100%;
        font-size: 0.9rem;
        transition: all 0.3s ease;
    }

        .editable-field:focus {
            outline: none;
            border-color: #8b5cf6;
            box-shadow: 0 0 0 3px rgba(139, 92, 246, 0.1);
        }

    .readonly-text {
        color: #64748b;
        line-height: 1.5;
    }

    .btn-update {
        padding: 8px 20px;
        background: linear-gradient(135deg, #0ea5e9, #0284c7);
        color: white;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        font-size: 0.85rem;
        cursor: pointer;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 6px;
    }

        .btn-update:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(14, 165, 233, 0.4);
        }

    .readonly-label {
        color: #94a3b8;
        font-size: 0.85rem;
        font-weight: 500;
    }

    /* Modal Styles */
    .modal-custom .modal-content {
        border: none;
        border-radius: 16px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
    }

    .modal-custom .modal-header {
        background: linear-gradient(135deg, #8b5cf6, #7c3aed);
        color: white;
        border-radius: 16px 16px 0 0;
        padding: 20px 28px;
        border: none;
    }

    .modal-custom .modal-title {
        font-weight: 700;
        font-size: 1.25rem;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .modal-custom .close {
        color: white;
        opacity: 0.9;
        text-shadow: none;
        font-size: 1.5rem;
    }

        .modal-custom .close:hover {
            opacity: 1;
        }

    .modal-custom .modal-body {
        padding: 28px;
    }

    .form-group-custom {
        margin-bottom: 20px;
    }

        .form-group-custom label {
            display: block;
            font-weight: 600;
            color: #475569;
            margin-bottom: 8px;
            font-size: 0.9rem;
        }

            .form-group-custom label i {
                color: #8b5cf6;
                margin-right: 6px;
            }

        .form-group-custom input,
        .form-group-custom textarea {
            width: 100%;
            padding: 12px 16px;
            border: 2px solid #e2e8f0;
            border-radius: 10px;
            font-size: 0.95rem;
            transition: all 0.3s ease;
        }

            .form-group-custom input:focus,
            .form-group-custom textarea:focus {
                outline: none;
                border-color: #8b5cf6;
                box-shadow: 0 0 0 3px rgba(139, 92, 246, 0.1);
            }

    .modal-custom .modal-footer {
        padding: 20px 28px;
        border-top: 1px solid #e2e8f0;
        gap: 12px;
    }

    .btn-modal-close {
        padding: 10px 24px;
        background: #f1f5f9;
        color: #475569;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
    }

    .btn-modal-submit {
        padding: 10px 24px;
        background: linear-gradient(135deg, #10b981, #059669);
        color: white;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .empty-state {
        text-align: center;
        padding: 60px 20px;
        color: #64748b;
    }

        .empty-state i {
            font-size: 4rem;
            color: #cbd5e1;
            margin-bottom: 16px;
        }

    @@media (max-width: 768px) {
        .toolbar-form {
            flex-direction: column;
            align-items: stretch;
        }

        .search-input-group {
            min-width: 100%;
        }

        .btn-search, .btn-add {
            width: 100%;
            justify-content: center;
        }

        .medical-table {
            font-size: 0.85rem;
        }

            .medical-table thead th,
            .medical-table tbody td {
                padding: 12px 8px;
            }

        .patient-cell {
            flex-direction: column;
            align-items: flex-start;
        }
    }
</style>

<div class="medical-records-container">
    @if (TempData["Success"] != null)
    {
        <div class="alert-custom alert-success-custom">
            <i class="fas fa-check-circle"></i>
            <span>@TempData["Success"]</span>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert-custom alert-danger-custom">
            <i class="fas fa-exclamation-circle"></i>
            <span>@TempData["Error"]</span>
        </div>
    }

    <div class="page-header">
        <h2>
            <i class="fas fa-notes-medical"></i>
            Danh sách bệnh án
        </h2>
    </div>

    <div class="toolbar-card">
        <form method="get" class="toolbar-form">
            <div class="search-input-group">
                <i class="fas fa-search"></i>
                <input type="text" name="search" placeholder="Tìm kiếm theo tên bệnh nhân, bác sĩ..." value="@request.Query["search"]" />
            </div>
            <button type="submit" class="btn-search">
                <i class="fas fa-search"></i>
                Tìm kiếm
            </button>
            <button type="button" class="btn-add" data-toggle="modal" data-target="#addModal">
                <i class="fas fa-plus-circle"></i>
                Thêm hồ sơ
            </button>
        </form>
    </div>

    <div class="table-card">
        @if (Model != null && Model.Count > 0)
        {
            <div class="table-responsive">
                <table class="medical-table">
                    <thead>
                        <tr>
                            <th>Bệnh nhân</th>
                            <th>Bác sĩ điều trị</th>
                            <th>Ngày khám</th>
                            <th>Chẩn đoán</th>
                            <th>Phác đồ điều trị</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div class="patient-cell">
                                        <div class="patient-avatar">
                                            @item.TenBenhNhan?.Substring(0, 1).ToUpper()
                                        </div>
                                        <span class="patient-name">@item.TenBenhNhan</span>
                                    </div>
                                </td>
                                <td>
                                    <div class="doctor-info">
                                        <span class="doctor-name">@item.TenBacSi</span>
                                        @if (item.MaBacSi == currentDoctorId)
                                        {
                                            <span class="owner-badge">
                                                <i class="fas fa-check"></i>
                                                Của bạn
                                            </span>
                                        }
                                    </div>
                                </td>
                                <td>
                                    <div class="date-display">
                                        <i class="fas fa-calendar-day"></i>
                                        @item.NgayKham.ToString("dd/MM/yyyy")
                                    </div>
                                </td>
                                <td>
                                    @if (item.MaBacSi == currentDoctorId)
                                    {
                                        <input type="text" id="chanDoan_@item.MaHoSo" value="@item.ChanDoan" class="editable-field" placeholder="Nhập chẩn đoán..." />
                                    }
                                    else
                                    {
                                        <span class="readonly-text">@item.ChanDoan</span>
                                    }
                                </td>
                                <td>
                                    @if (item.MaBacSi == currentDoctorId)
                                    {
                                        <input type="text" id="phuongAn_@item.MaHoSo" value="@item.PhuongAnDieuTri" class="editable-field" placeholder="Nhập phác đồ..." />
                                    }
                                    else
                                    {
                                        <span class="readonly-text">@item.PhuongAnDieuTri</span>
                                    }
                                </td>
                                <td>
                                    @if (item.MaBacSi == currentDoctorId)
                                    {
                                        <button type="button" class="btn-update" onclick="updateRecord(@item.MaHoSo)">
                                            <i class="fas fa-save"></i>
                                            Cập nhật
                                        </button>
                                    }
                                    else
                                    {
                                        <span class="readonly-label">
                                            <i class="fas fa-eye"></i> Chỉ xem
                                        </span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="empty-state">
                <i class="fas fa-folder-open"></i>
                <h4>Chưa có hồ sơ bệnh án</h4>
                <p>Nhấn nút "Thêm hồ sơ" để tạo hồ sơ bệnh án mới</p>
            </div>
        }
    </div>
</div>

<!-- Modal thêm mới -->
<div class="modal fade modal-custom" id="addModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <form method="post" asp-action="AddOrUpdateMedicalRecord" asp-controller="Doctor">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="fas fa-file-medical"></i>
                        Thêm hồ sơ bệnh án mới
                    </h5>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="MaHoSo" value="0" />

                    <div class="form-group-custom">
                        <label>
                            <i class="fas fa-user"></i>
                            Tên bệnh nhân
                        </label>
                        <input type="text" name="TenBenhNhan" placeholder="Nhập họ tên bệnh nhân" required />
                    </div>

                    <div class="form-group-custom">
                        <label>
                            <i class="fas fa-calendar"></i>
                            Ngày khám
                        </label>
                        <input type="date" name="NgayKham" required />
                    </div>

                    <div class="form-group-custom">
                        <label>
                            <i class="fas fa-stethoscope"></i>
                            Chẩn đoán
                        </label>
                        <textarea name="ChanDoan" placeholder="Nhập chẩn đoán bệnh..." rows="3" required></textarea>
                    </div>

                    <div class="form-group-custom">
                        <label>
                            <i class="fas fa-prescription"></i>
                            Phác đồ điều trị
                        </label>
                        <textarea name="PhuongAnDieuTri" placeholder="Nhập phác đồ điều trị..." rows="3" required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn-modal-close" data-dismiss="modal">
                        <i class="fas fa-times"></i> Hủy
                    </button>
                    <button type="submit" class="btn-modal-submit">
                        <i class="fas fa-check"></i>
                        Thêm hồ sơ
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>

<script>
    function updateRecord(maHoSo) {
        var chanDoan = document.getElementById('chanDoan_' + maHoSo).value;
        var phuongAn = document.getElementById('phuongAn_' + maHoSo).value;

        if (!chanDoan.trim() || !phuongAn.trim()) {
            alert('Vui lòng nhập đầy đủ chẩn đoán và phác đồ điều trị!');
            return;
        }

        var form = document.createElement('form');
        form.method = 'POST';
        form.action = '/Doctor/UpdateMedicalRecord';

        var maHoSoInput = document.createElement('input');
        maHoSoInput.type = 'hidden';
        maHoSoInput.name = 'MaHoSo';
        maHoSoInput.value = maHoSo;

        var chanDoanInput = document.createElement('input');
        chanDoanInput.type = 'hidden';
        chanDoanInput.name = 'ChanDoan';
        chanDoanInput.value = chanDoan;

        var phuongAnInput = document.createElement('input');
        phuongAnInput.type = 'hidden';
        phuongAnInput.name = 'PhuongAnDieuTri';
        phuongAnInput.value = phuongAn;

        form.appendChild(maHoSoInput);
        form.appendChild(chanDoanInput);
        form.appendChild(phuongAnInput);

        document.body.appendChild(form);
        form.submit();
    }

    // Auto-hide alerts after 5 seconds
    document.addEventListener('DOMContentLoaded', function() {
        const alerts = document.querySelectorAll('.alert-custom');
        alerts.forEach(alert => {
            setTimeout(() => {
                alert.style.animation = 'slideDown 0.3s ease reverse';
                setTimeout(() => alert.remove(), 300);
            }, 5000);
        });
    });
</script>