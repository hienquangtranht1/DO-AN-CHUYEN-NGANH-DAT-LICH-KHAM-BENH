@model BookinhMVC.Models.NguoiDung

@{
    ViewBag.Title = "Thông tin cá nhân";
    ViewBag.Active = "Profile"; // Đánh dấu menu active trong Layout
    Layout = "_AdminLayout"; // Đảm bảo sử dụng layout admin
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <h2><i class="fas fa-user-circle me-2"></i>Thông tin cá nhân</h2>
        <hr />

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                Chi tiết Tài khoản Quản trị
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Mã người dùng:</dt>
                    <dd class="col-sm-8">@Model.MaNguoiDung</dd>

                    <dt class="col-sm-4">Tên đăng nhập:</dt>
                    <dd class="col-sm-8">@Model.TenDangNhap</dd>

                    <dt class="col-sm-4">Vai trò:</dt>
                    <dd class="col-sm-8"><span class="badge bg-danger">@Model.VaiTro</span></dd>

                    @* <dt class="col-sm-4">Email:</dt> *@
                    @* <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.Email) ? "Chưa cung cấp" : Model.Email)</dd> *@

                    <dt class="col-sm-4">Ngày tạo:</dt>
                    <dd class="col-sm-8">@Model.NgayTao.ToString("dd/MM/yyyy HH:mm")</dd>
                </dl>
            </div>
            <div class="card-footer text-end">
                <a asp-action="UpdateProfile" class="btn btn-warning"><i class="fas fa-edit me-1"></i>Cập nhật hồ sơ</a>
                <a asp-action="ChangePassword" class="btn btn-info text-white"><i class="fas fa-key me-1"></i>Đổi mật khẩu</a>
            </div>
        </div>
    </div>
</div>