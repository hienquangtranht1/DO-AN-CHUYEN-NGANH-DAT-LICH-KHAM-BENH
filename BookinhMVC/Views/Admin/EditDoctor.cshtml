@model BookinhMVC.Models.BacSi
@{
    Layout = "_AdminLayout";
    ViewBag.Active = "Doctors";
    ViewBag.Title = "Sửa Bác sĩ";
    var khoas = ViewBag.Khoas as List<BookinhMVC.Models.Khoa>;

    // Lấy tên người dùng (TenDangNhap) để hiển thị trong form
    var tenDangNhap = Model.NguoiDung?.TenDangNhap ?? "N/A";

    // Xử lý đường dẫn hình ảnh cho trường hợp Model.HinhAnhBacSi là tên file hoặc đường dẫn đầy đủ
    string imagePath = string.IsNullOrEmpty(Model.HinhAnhBacSi)
                       ? "/images/default-doctor.png"
                       : (Model.HinhAnhBacSi.StartsWith("/uploads") ? Model.HinhAnhBacSi : "/uploads/" + Model.HinhAnhBacSi);
}

@section Scripts {
    <script src="https://cdn.tiny.cloud/1/rkfxe461o9rhm9y5pasyuukghsi6ftjy9ohpay9bhwzulh89/tinymce/7/tinymce.min.js" referrerpolicy="origin"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // KHỞI TẠO TINYMCE CHO TEXTAREA MÔ TẢ
            tinymce.init({
                selector: '#MoTa', // ID của phần tử textarea
                plugins: 'advlist autolink lists link image charmap print preview anchor searchreplace visualblocks code fullscreen insertdatetime media table paste code help wordcount',
                toolbar: 'undo redo | formatselect | bold italic backcolor | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | removeformat | help',
                height: 400, // Chiều cao của editor
                menubar: 'file edit view insert format tools help',
                content_css: [
                    'https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css',
                ]
            });
        });
    </script>
}

<style>
    /* VARIABLES */
    :root {
        --primary-color: #4f46e5;
        --success-color: #10b981;
        --text-primary: #1f2937;
        --text-secondary: #6b7280;
    }

    /* === FORM STYLES === */
    .form-header {
        background: linear-gradient(135deg, var(--primary-color) 0%, #6366f1 100%);
        color: white;
        padding: 1.5rem 2rem;
        border-radius: 15px 15px 0 0;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        font-weight: 700;
        font-size: 1.5rem;
    }

    .form-card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

    .form-control, .form-select {
        border-radius: 8px;
        padding: 0.75rem 1rem;
        transition: all 0.3s;
    }

        .form-control:focus, .form-select:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.25rem rgba(79, 70, 229, 0.25);
        }

    .form-label {
        font-weight: 600;
        color: var(--text-primary);
        margin-bottom: 0.5rem;
    }

    .btn-action {
        padding: 0.75rem 1.5rem;
        border-radius: 50px;
        font-weight: 600;
        transition: all 0.3s;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .btn-primary {
        background-color: var(--primary-color);
        border-color: var(--primary-color);
    }

        .btn-primary:hover {
            background-color: #4338ca;
            border-color: #4338ca;
        }

    .btn-secondary {
        border-radius: 10px;
    }

    .current-image-preview {
        max-width: 120px;
        max-height: 120px;
        border-radius: 8px;
        border: 2px solid #ccc;
        margin-top: 5px;
        object-fit: cover;
    }
</style>

<div class="row justify-content-center">
    <div class="col-lg-10 col-md-12">
        <div class="card form-card">
            <div class="form-header">
                <i class="fas fa-user-edit me-2"></i> @ViewBag.Title
            </div>
            <div class="card-body p-4 p-md-5">

                <form asp-action="EditDoctor" method="post" enctype="multipart/form-data" class="row g-4">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.MaBacSi" />
                    <input type="hidden" name="maNguoiDung" value="@Model.MaNguoiDung" />
                    <input type="hidden" name="hinhAnhBacSi" value="@Model.HinhAnhBacSi" />

                    <div class="col-md-6">

                        <div class="mb-4">
                            <label class="form-label">Tên đăng nhập</label>
                            <input class="form-control" value="@tenDangNhap" disabled />
                            <small class="text-secondary">Tên đăng nhập không thể thay đổi.</small>
                        </div>

                        <div class="mb-4">
                            <label for="hoTen" class="form-label">Họ tên</label>
                            <input name="hoTen" id="hoTen" class="form-control" value="@Model.HoTen" required />
                        </div>

                        <div class="mb-4">
                            <label for="maKhoa" class="form-label">Khoa</label>
                            <select name="maKhoa" id="maKhoa" class="form-select" required>
                                @foreach (var k in khoas)
                                {
                                    <option value="@k.MaKhoa" selected="@(Model.MaKhoa == k.MaKhoa ? "selected" : null)">
                                        @k.TenKhoa
                                    </option>
                                }
                            </select>
                        </div>

                        <div class="mb-4">
                            <label for="soDienThoai" class="form-label">Số điện thoại</label>
                            <input name="soDienThoai" id="soDienThoai" class="form-control" value="@Model.SoDienThoai" />
                        </div>

                        <div class="mb-4">
                            <label for="email" class="form-label">Email</label>
                            <input name="email" id="email" class="form-control" value="@Model.Email" />
                        </div>
                    </div>

                    <div class="col-md-6">

                        <div class="mb-4">
                            <label class="form-label">Hình ảnh hiện tại</label>
                            <br />
                            @if (!string.IsNullOrEmpty(Model.HinhAnhBacSi))
                            {
                                <img src="@imagePath" alt="Ảnh bác sĩ" class="current-image-preview" />
                            }
                            else
                            {
                                <span class="text-secondary">Chưa có hình ảnh.</span>
                            }
                        </div>

                        <div class="mb-4">
                            <label for="file" class="form-label">Đổi hình ảnh</label>
                            <input type="file" name="file" id="file" class="form-control" accept="image/*" />
                        </div>

                        <div class="mb-4">
                            <label for="MoTa" class="form-label">Mô tả chi tiết</label>
                            <textarea name="moTa" id="MoTa" class="form-control" rows="10">@Model.MoTa</textarea>
                            <small class="text-secondary">Sử dụng trình soạn thảo để định dạng mô tả.</small>
                        </div>
                    </div>

                    <div class="col-12 d-flex justify-content-end pt-3 border-top mt-5">
                        <a href="/Admin/Doctors" class="btn btn-secondary btn-action me-3">
                            <i class="fas fa-arrow-left me-1"></i> Quay lại
                        </a>
                        <button type="submit" class="btn btn-primary btn-action">
                            <i class="fas fa-save me-1"></i> Lưu thay đổi
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>