@model BookinhMVC.Models.LichLamViec
@{
    Layout = "_AdminLayout";
    ViewBag.Active = "WorkSchedules";
    ViewBag.Title = "Sửa lịch làm việc";
    var doctors = ViewBag.Doctors as List<BookinhMVC.Models.BacSi>;

    // Lấy giá trị giờ ban đầu ở định dạng hh:mm
    var gioBatDauString = Model.GioBatDau.Hours.ToString("D2") + ":" + Model.GioBatDau.Minutes.ToString("D2");
    var gioKetThucString = Model.GioKetThuc.Hours.ToString("D2") + ":" + Model.GioKetThuc.Minutes.ToString("D2");
}

<style>
    :root {
        --primary-color: #4f46e5;
        --success-color: #10b981;
        --text-primary: #1f2937;
    }

    .form-header {
        background: linear-gradient(135deg, var(--primary-color) 0%, #6366f1 100%);
        color: white;
        padding: 1.5rem 2rem;
        border-radius: 15px 15px 0 0;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        font-weight: 700;
        font-size: 1.5rem;
    }

    .form-card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

    .form-control, .form-select {
        border-radius: 8px;
        padding: 0.75rem 1rem;
        transition: all 0.3s;
    }

        .form-control:focus, .form-select:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.25rem rgba(79, 70, 229, 0.25);
        }

    .form-label {
        font-weight: 600;
        color: var(--text-primary);
        margin-bottom: 0.5rem;
    }

    .btn-action {
        padding: 0.75rem 1.5rem;
        border-radius: 50px;
        font-weight: 600;
        transition: all 0.3s;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .btn-primary {
        background-color: var(--primary-color);
        border-color: var(--primary-color);
    }

        .btn-primary:hover {
            background-color: #4338ca;
            border-color: #4338ca;
        }

    .btn-secondary {
        border-radius: 10px;
    }
</style>

<div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">
        <div class="card form-card">
            <div class="form-header">
                <i class="fas fa-calendar-alt me-2"></i> @ViewBag.Title
            </div>
            <div class="card-body p-4 p-md-5">
                <form asp-action="EditWorkSchedule" method="post" class="row g-4">

                    @Html.AntiForgeryToken()
                    <input type="hidden" name="MaLich" value="@Model.MaLich" />

                    <div class="col-12">
                        <label for="MaBacSi" class="form-label">Bác sĩ</label>
                        <select name="MaBacSi" id="MaBacSi" class="form-select" required>
                            @foreach (var bs in doctors)
                            {
                                <option value="@bs.MaBacSi" selected="@(Model.MaBacSi == bs.MaBacSi)">
                                    @bs.HoTen (@bs.Khoa?.TenKhoa)
                                </option>
                            }
                        </select>
                    </div>

                    <div class="col-md-6">
                        <label for="NgayLamViec" class="form-label">Ngày làm việc</label>
                        <input type="date" name="NgayLamViec" id="NgayLamViec" class="form-control"
                               value="@Model.NgayLamViec.ToString("yyyy-MM-dd")" required />
                    </div>

                    <div class="col-md-3">
                        <label for="GioBatDau" class="form-label">Giờ bắt đầu</label>
                        <input type="time" name="GioBatDau" id="GioBatDau" class="form-control"
                               value="@gioBatDauString" required />
                    </div>

                    <div class="col-md-3">
                        <label for="GioKetThuc" class="form-label">Giờ kết thúc</label>
                        <input type="time" name="GioKetThuc" id="GioKetThuc" class="form-control"
                               value="@gioKetThucString" required />
                    </div>

                    <div class="col-12">
                        <label for="TrangThai" class="form-label">Trạng thái</label>
                        <select name="TrangThai" id="TrangThai" class="form-select">
                            <option value="Chưa xác nhận" selected="@(Model.TrangThai == "Chưa xác nhận")">Chưa xác nhận</option>
                            <option value="Đã xác nhận" selected="@(Model.TrangThai == "Đã xác nhận")">Đã xác nhận</option>
                        </select>
                    </div>

                    <div class="col-12 d-flex justify-content-end pt-3 border-top mt-5">
                        <a href="@Url.Action("WorkSchedules")" class="btn btn-secondary btn-action me-3">
                            <i class="fas fa-arrow-left me-1"></i> Quay lại
                        </a>
                        <button type="submit" class="btn btn-primary btn-action">
                            <i class="fas fa-save me-1"></i> Lưu thay đổi
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>