@model IEnumerable<BookinhMVC.Models.CsKh>
@{
    ViewBag.Title = "Danh sách CSKH";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h4>Danh sách CSKH</h4>
    <a class="btn btn-sm btn-primary" asp-action="CreateCSKH"><i class="fas fa-plus-circle me-1"></i> Tạo CSKH</a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<table class="table table-striped table-bordered">
    <thead class="table-light">
        <tr>
            <th style="width:60px">#</th>
            <th>Tên đăng nhập</th>
            <th>Họ tên</th>
            <th>Email</th>
            <th>Điện thoại</th>
            <th style="width:160px">Ngày tạo</th>
            <th style="width:140px">Hành động</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            int i = 1;
            foreach (var it in Model)
            {
                <tr>
                    <td>@i</td>
                    <td>@it.Username</td>
                    <td>@it.FullName</td>
                    <td>@it.Email</td>
                    <td>@it.Phone</td>
                    <td>@it.CreatedAt.ToString("g")</td>
                    <td>
                        <a class="btn btn-sm btn-outline-secondary me-1" asp-action="EditCSKH" asp-route-id="@it.Id"><i class="fas fa-edit"></i> Sửa</a>
                        <a class="btn btn-sm btn-outline-danger" asp-action="DeleteCSKH" asp-route-id="@it.Id"><i class="fas fa-trash"></i> Xóa</a>
                    </td>
                </tr>
                i++;
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center text-muted">Chưa có CSKH nào.</td>
            </tr>
        }
    </tbody>
</table>