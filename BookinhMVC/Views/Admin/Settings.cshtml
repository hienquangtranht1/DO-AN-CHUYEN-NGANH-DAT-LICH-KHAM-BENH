@{
    ViewBag.Title = "Cài đặt hệ thống";
    ViewBag.Active = "Settings";
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <h2><i class="fas fa-cog me-2"></i>Cài đặt hệ thống</h2>
        <hr />

        <div class="alert alert-info" role="alert">
            @ViewBag.Message
        </div>

        <div class="card shadow-sm">
            <div class="card-header bg-secondary text-white">
                Cấu hình chung
            </div>
            <div class="card-body">
                <form>
                    <div class="mb-3">
                        <label for="siteName" class="form-label">Tên Hệ thống</label>
                        <input type="text" class="form-control" id="siteName" value="Hệ thống Đặt lịch Y tế">
                    </div>
                    <div class="mb-3">
                        <label for="contactEmail" class="form-label">Email Liên hệ</label>
                        <input type="email" class="form-control" id="contactEmail" value="contact@hospital.com">
                    </div>

                    <button type="submit" class="btn btn-primary"><i class="fas fa-save me-1"></i>Lưu Cài đặt</button>
                </form>
            </div>
            <div class="card-footer text-muted">
                Lưu ý: Các thay đổi ở đây sẽ ảnh hưởng đến toàn bộ hệ thống.
            </div>
        </div>
    </div>
</div>