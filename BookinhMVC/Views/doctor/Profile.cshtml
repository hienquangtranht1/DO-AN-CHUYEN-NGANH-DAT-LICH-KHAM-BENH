@model BookinhMVC.Models.BacSi
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/Shared/_DoctorLayout.cshtml";
    ViewBag.Title = "Thông tin cá nhân";

    // Lấy ảnh từ Session và thiết lập đường dẫn
    var doctorImage = Context.Session.GetString("DoctorImage") ?? "default.jpg";
    var imagePath = $"/uploads/{doctorImage}";

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
}

<style>
    /* ------------------------------------------- */
    /* --- CUSTOM CSS STYLES --- */
    /* ------------------------------------------- */
    :root {
        --primary-blue: #0ea5e9;
        --secondary-gray: #475569;
        --light-bg: #f8fafc;
    }

    .profile-card {
        border-radius: 16px;
        transition: transform 0.3s ease;
    }

    .profile-header {
        background: linear-gradient(135deg, var(--primary-blue), #0284c7);
        color: white;
        padding: 30px;
        border-top-left-radius: 16px;
        border-top-right-radius: 16px;
        display: flex;
        align-items: center;
        gap: 20px;
    }

    .avatar-wrapper {
        position: relative;
        display: inline-block;
    }

    .profile-img-preview {
        width: 130px;
        height: 130px;
        object-fit: cover;
        border: 4px solid white;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }

    .btn-file-upload {
        position: absolute;
        bottom: 0;
        right: 0;
        background: white;
        color: var(--primary-blue);
        border: 2px solid var(--primary-blue);
        border-radius: 50%;
        width: 35px;
        height: 35px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: background-color 0.2s;
    }

        .btn-file-upload:hover {
            background: var(--primary-blue);
            color: white;
        }

    .info-group label {
        font-weight: 700;
        color: var(--secondary-gray);
        font-size: 0.95rem;
        margin-bottom: 5px;
    }

    .form-control {
        border-radius: 8px;
        padding: 10px 15px;
    }

    /* Điều chỉnh TinyMCE */
    .tox .tox-editor-container {
        border-radius: 8px !important;
    }

    .btn-primary {
        background-color: var(--primary-blue);
        border-color: var(--primary-blue);
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0284c7;
            border-color: #0284c7;
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(14, 165, 233, 0.3);
        }

    /* CSS cho vùng hiển thị (Read-only Display Area) */
    .read-only-description {
        padding: 15px;
        border: 1px solid #e2e8f0;
        border-radius: 8px;
        background-color: var(--light-bg);
        margin-top: 15px;
    }
</style>

<div class="container-fluid py-4">
    <h3 class="mb-4 text-primary"><i class="fas fa-id-card-alt me-2"></i> Hồ sơ cá nhân Bác sĩ</h3>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <i class="fas fa-check-circle me-2"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <form asp-action="UpdateProfile" asp-controller="Doctor" method="post" enctype="multipart/form-data">
        <input type="hidden" name="MaBacSi" value="@Model.MaBacSi" />

        <div class="row justify-content-center">

            <div class="col-lg-10 col-xl-8">
                <div class="card profile-card shadow-lg border-0">

                    <div class="profile-header">
                        <div class="avatar-wrapper">
                            <img src="@imagePath" alt="Ảnh bác sĩ" id="profile-img-preview"
                                 class="rounded-circle profile-img-preview" />

                            <label for="profileImage" class="btn-file-upload">
                                <i class="fas fa-camera"></i>
                            </label>
                            <input type="file" name="profileImage" id="profileImage" class="d-none" accept="image/*" />
                        </div>

                        <div>
                            <h3 class="mb-1 text-white">@Model.HoTen</h3>
                            <p class="mb-0 fs-5 text-light">
                                <i class="fas fa-stethoscope me-2"></i> Bác sĩ | Mã: @Model.MaBacSi
                            </p>
                        </div>
                    </div>

                    <div class="card-body p-4 p-md-5">

                        <h4 class="mb-4 text-secondary border-bottom pb-2">
                            <i class="fas fa-info-circle me-2"></i> Thông tin cơ bản
                        </h4>

                        <div class="row g-4">

                            <div class="col-md-6 info-group">
                                <label class="form-label"><i class="fas fa-user-tag me-2"></i> Họ và tên</label>
                                <input type="text" name="HoTen" class="form-control" value="@Model.HoTen" required />
                            </div>

                            <div class="col-md-6 info-group">
                                <label class="form-label"><i class="fas fa-envelope me-2"></i> Email</label>
                                <input type="email" name="Email" class="form-control" value="@Model.Email" required />
                            </div>

                            <div class="col-md-6 info-group">
                                <label class="form-label"><i class="fas fa-phone me-2"></i> Số điện thoại</label>
                                <input type="text" name="SoDienThoai" class="form-control" value="@Model.SoDienThoai" />
                            </div>

                            <div class="col-md-6 info-group">
                                <label class="form-label"><i class="fas fa-hospital-user me-2"></i> Khoa công tác</label>
                                <input type="text" class="form-control bg-light" value="@(Model.Khoa?.TenKhoa ?? "Chưa xác định")" disabled />
                                <div class="form-text text-muted">Thông tin này được quản lý bởi Quản trị viên.</div>
                            </div>
                        </div>

                        <h4 class="mt-5 mb-4 text-secondary border-bottom pb-2">
                            <i class="fas fa-comment-dots me-2"></i> Mô tả Chuyên môn (Chỉnh sửa)
                        </h4>

                        <div class="col-12 info-group">
                            <label class="form-label">Giới thiệu ngắn gọn về bản thân và kinh nghiệm</label>
                            <textarea name="MoTa" id="tinyMceEditor" class="form-control" rows="8">@Model.MoTa</textarea>
                        </div>

                        <h4 class="mt-5 mb-3 text-secondary border-bottom pb-2">
                            <i class="fas fa-eye me-2"></i> Hiển thị công khai (Read-Only)
                        </h4>
                        <div class="read-only-description">
                            @if (!string.IsNullOrEmpty(Model.MoTa))
                            {
                                @Html.Raw(Model.MoTa)
                            }
                            else
                            {
                                <p class="text-muted fst-italic">Chưa có mô tả chi tiết. Vui lòng chỉnh sửa ở trên.</p>
                            }
                        </div>

                        <div class="d-grid mt-5">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-sync-alt me-2"></i> Lưu Cập nhật
                            </button>
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script src="https://cdn.tiny.cloud/1/rkfxe461o9rhm9y5pasyuukghsi6ftjy9ohpay9bhwzulh89/tinymce/7/tinymce.min.js" referrerpolicy="origin"></script>

    <script>
        // 2. Khởi tạo TinyMCE cho textarea có ID là 'tinyMceEditor'
        tinymce.init({
            selector: '#tinyMceEditor',
            height: 300, // Chiều cao của trình soạn thảo
            plugins: [
                'advlist autolink lists link image charmap print preview anchor',
                'searchreplace visualblocks code fullscreen',
                'insertdatetime media table paste code help wordcount'
            ],
            toolbar: 'undo redo | formatselect | ' +
                'bold italic backcolor | alignleft aligncenter ' +
                'alignright alignjustify | bullist numlist outdent indent | ' +
                'removeformat | help',
            content_style: 'body { font-family: Arial,sans-serif; font-size:14px }',
            // Đảm bảo cập nhật textarea trước khi submit form
            setup: function (editor) {
                editor.on('change', function () {
                    tinymce.triggerSave();
                });
            }
        });

        // Hiển thị preview ảnh khi chọn file mới
        document.getElementById('profileImage')?.addEventListener('change', function (e) {
            const [file] = this.files;
            if (file) {
                const img = document.getElementById('profile-img-preview');
                img.src = URL.createObjectURL(file);
            }
        });
    </script>
}