                                const date = new Date(it.createdAt).toLocaleDateString('vi-VN');
                                const html = `
                                    <a href="#" class="dropdown-item py-2 border-bottom" onclick="markRead(${it.id}, '${it.relatedAppointmentId || ''}')">
                                        <div class="d-flex justify-content-between">
                                            <strong class="small text-truncate" style="max-width: 180px;">${it.title}</strong>
                                            <span class="text-muted" style="font-size: 0.7rem;">${date}</span>
                                        </div>
                                        <div class="small text-muted text-truncate" style="max-width: 220px;">${it.content}</div>
                                    </a>`;
                                container.insertAdjacentHTML('beforeend', html);
                            });
                        } else {
                            container.innerHTML = '<div class="text-center py-3 text-muted small">Không có thông báo mới.</div>';
                        }
                    } catch (e) { console.error("Notif error", e); }
                }

                loadNotifs();
                setInterval(loadNotifs, 30000);

                window.markRead = async (id, linkId) => {
                    await fetch('/User/Notifications/MarkRead', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ id: id })
                    });
                    if (linkId) window.location.href = '/User/Appointments';
                    else loadNotifs();
                };
            }
        })();

        // --- 2. VOICE SEARCH LOGIC ---
        document.addEventListener('DOMContentLoaded', function () {
            const voiceBtn = document.getElementById('voice-search-btn');
            const searchInput = document.getElementById('search-input');
            const searchForm = document.getElementById('search-form-header');
            const voiceAlert = document.getElementById('voice-alert');
            const voiceAlertContent = document.getElementById('voice-alert-content');

            if (!voiceBtn || !searchInput) return;

            const SpeechRecognition = window.SpeechRecognition || window.webkitSpeechRecognition;
            if (!SpeechRecognition) {
                voiceBtn.style.display = 'none';
                return;
            }

            const recognition = new SpeechRecognition();
            recognition.lang = 'vi-VN';
            recognition.interimResults = false;

            function showAlert(msg, type = 'info') {
                voiceAlertContent.innerHTML = msg;
                voiceAlert.className = `alert shadow-sm alert-${type}`;
                $(voiceAlert).fadeIn().delay(3000).fadeOut();
            }

            voiceBtn.addEventListener('click', () => {
                if (voiceBtn.classList.contains('voice-search-status')) {
                    recognition.stop();
                } else {
                    recognition.start();
                }
            });

            recognition.onstart = () => {
                voiceBtn.classList.add('voice-search-status');
                showAlert('<i class="fas fa-microphone me-2"></i>Đang lắng nghe...', 'warning');
            };

            recognition.onend = () => {
                voiceBtn.classList.remove('voice-search-status');
            };

            recognition.onresult = (event) => {
                const transcript = event.results[0][0].transcript;
                searchInput.value = transcript;
                showAlert(`<i class="fas fa-check me-2"></i>Đã nhận: "${transcript}"`, 'success');
                setTimeout(() => searchForm.submit(), 1000);
            };

            recognition.onerror = (event) => {
                showAlert('Không nghe rõ, vui lòng thử lại.', 'danger');
            };
        });

        // --- 3. CHAT LOGIC ---
        const currentUserId = '@userId';

        function toggleCSKHChatBox(e) {
            e.stopPropagation();
            $('#chatbotChatBox').hide();
            const box = $('#cskhChatBox');
            box.toggle();
            if (box.is(':visible')) {
                loadCSKHMessages();
                setTimeout(() => $('#cskhChatInput').focus(), 300);
            }
        }

        function closeCSKHChatBox() { $('#cskhChatBox').hide(); }

        function loadCSKHMessages() {
            if(!currentUserId) return;
            $('#cskhChatMessages').html('<div class="text-center small text-muted mt-5">Đang tải...</div>');

            $.post('/api/patient/getMessages', { user1: currentUserId, user2: 1 }, function (res) {
                const container = $('#cskhChatMessages');
                container.empty();
                if (res.success && res.messages.length > 0) {
                    res.messages.forEach(msg => {
                        const isMe = msg.senderId == currentUserId;
                        const cls = isMe ? 'bg-primary text-white ms-auto' : 'bg-white text-dark me-auto border';
                        container.append(`<div class="d-flex mb-2"><div class="p-2 rounded ${cls}" style="max-width: 80%;">${msg.message}</div></div>`);
                    });
                } else {
                    container.html('<div class="text-center small text-muted mt-5">Chưa có tin nhắn nào.</div>');
                }
                container.scrollTop(container[0].scrollHeight);
            });
        }

        function sendCSKHMessage() {
            const input = $('#cskhChatInput');
            const msg = input.val().trim();
            if (!msg) return false;

            const token = $('#cskhChatForm input[name="__RequestVerificationToken"]').val();
            $.post('/api/patient/sendMessage', { receiver_id: 1, message: msg, __RequestVerificationToken: token }, function (res) {
                if (res.success) {
                    input.val('');
                    loadCSKHMessages();
                } else {
                    alert('Gửi lỗi!');
                }
            });
            return false;
        }

        function toggleChatbotChatBox(e) {
            e.stopPropagation();
            $('#cskhChatBox').hide();
            const box = $('#chatbotChatBox');
            box.toggle();
            if (box.is(':visible') && $('#chatbotChatMessages').children().length === 0) {
                appendBotMsg("Xin chào! Tôi là trợ lý ảo AI. Bạn cần giúp gì không?<br>[button:Đặt lịch khám|đặt lịch] [button:Giá dịch vụ|giá dịch vụ]");
            }
        }
        function closeChatbotChatBox() { $('#chatbotChatBox').hide(); }

        function appendUserMsg(txt) {
            $('#chatbotChatMessages').append(`<div class="d-flex mb-2 justify-content-end"><div class="bg-success text-white p-2 rounded" style="max-width:80%">${txt}</div></div>`);
            scrollBot();
        }
        function appendBotMsg(txt) {
            let html = marked.parse(txt);
            html = html.replace(/\[button:(.+?)\|(.+?)\]/g, '<button class="chatbot-suggestion" onclick="sendChatbotSuggestion(\'$2\')">$1</button>');
            $('#chatbotChatMessages').append(`<div class="d-flex mb-2 justify-content-start"><div class="bg-white border p-2 rounded" style="max-width:85%">${html}</div></div>`);
            scrollBot();
        }
        function scrollBot() {
            const d = $('#chatbotChatMessages');
            d.scrollTop(d[0].scrollHeight);
        }
        function sendChatbotSuggestion(txt) {
            $('#chatbotChatInput').val(txt);
            sendChatbotMessage();
        }

        function sendChatbotMessage() {
            const input = $('#chatbotChatInput');
            const msg = input.val().trim();
            if (!msg) return false;

            appendUserMsg(msg);
            input.val('');

            const typingId = 'typing-' + Date.now();
            $('#chatbotChatMessages').append(`<div id="${typingId}" class="text-muted small ms-2 mb-2">Đang trả lời...</div>`);
            scrollBot();

            const token = $('#chatbotChatForm input[name="__RequestVerificationToken"]').val();

            $.post('/api/chatbot', { message: msg, __RequestVerificationToken: token }, function(res) {
                $(`#${typingId}`).remove();
                appendBotMsg(res.reply);
            }).fail(function() {
                $(`#${typingId}`).remove();
                appendBotMsg("Xin lỗi, hệ thống đang bận.");
            });

            return false;
        }

        $(document).click(function(e) {
            if (!$(e.target).closest('.chatbox, .chat-icon-fixed').length) {
                $('.chatbox').hide();
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
