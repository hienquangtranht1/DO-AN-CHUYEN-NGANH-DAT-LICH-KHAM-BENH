@model IEnumerable<BookinhMVC.Models.Article>
@{
    ViewData["Title"] = "Quản Lý Bài Viết Blog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">Danh Sách Bài Viết Blog</h6>
        <a asp-action="CreateArticle" class="btn btn-success btn-sm">
            <i class="fas fa-plus"></i> Tạo Bài Viết
        </a>
    </div>
    <div class="card-body">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }

        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Tiêu đề</th>
                        <th>Danh mục</th>
                        <th>Tác giả</th>
                        <th>Ngày XB</th>
                        <th>Trạng thái</th>
                        <th>Lượt xem</th>
                        <th>Thao Tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Title</td>
                            <td>@item.Category?.CategoryName</td>
                            <td>@item.Author?.TenDangNhap</td>
                            <td>@item.PublishDate.ToString("dd/MM/yyyy")</td>
                            <td>
                                <span class="badge @(item.IsPublished ? "bg-success" : "bg-warning text-dark")">
                                    @(item.IsPublished ? "Đã Xuất Bản" : "Bản Nháp")
                                </span>
                            </td>
                            <td>@item.ViewsCount</td>
                            <td>
                                <a asp-action="EditArticle" asp-route-id="@item.ArticleId" class="btn btn-sm btn-info me-1" title="Sửa"><i class="fas fa-edit"></i></a>
                                <a asp-action="ArticleDetails" asp-route-id="@item.ArticleId" class="btn btn-sm btn-primary me-1" title="Chi tiết"><i class="fas fa-eye"></i></a>
                                <a asp-action="DeleteArticle" asp-route-id="@item.ArticleId" class="btn btn-sm btn-danger" title="Xóa"><i class="fas fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>