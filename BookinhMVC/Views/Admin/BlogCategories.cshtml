@model IEnumerable<BookinhMVC.Models.Category>
@{
    ViewData["Title"] = "Quản Lý Danh Mục Blog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">Danh Sách Danh Mục Blog</h6>
        <a asp-action="CreateBlogCategory" class="btn btn-primary btn-sm">
            <i class="fas fa-plus"></i> Thêm Danh Mục
        </a>
    </div>
    <div class="card-body">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }

        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Tên Danh Mục</th>
                        <th>Slug</th>
                        <th>Ngày Tạo</th>
                        <th>Thao Tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.CategoryId</td>
                            <td>@item.CategoryName</td>
                            <td>@item.Slug</td>
                            <td>@item.NgayTao.ToString("dd/MM/yyyy")</td>
                            <td>
                                <a asp-action="EditBlogCategory" asp-route-id="@item.CategoryId" class="btn btn-sm btn-info me-1"><i class="fas fa-edit"></i> Sửa</a>
                                <a asp-action="DeleteBlogCategory" asp-route-id="@item.CategoryId" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i> Xóa</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>