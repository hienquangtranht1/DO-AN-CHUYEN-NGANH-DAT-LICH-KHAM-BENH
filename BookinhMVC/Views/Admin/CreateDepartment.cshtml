@model BookinhMVC.Models.Khoa

@{
    Layout = "_AdminLayout";
    ViewBag.Active = "Departments";
    ViewBag.Title = "Thêm Khoa Mới";
}

@section Scripts {
    <script src="https://cdn.tiny.cloud/1/rkfxe461o9rhm9y5pasyuukghsi6ftjy9ohpay9bhwzulh89/tinymce/7/tinymce.min.js" referrerpolicy="origin"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // KHỞI TẠO TINYMCE CHO TEXTAREA CÓ ID LÀ 'MoTa'
            tinymce.init({
                selector: '#MoTa', // ID của phần tử textarea
                plugins: 'advlist autolink lists link image charmap print preview anchor searchreplace visualblocks code fullscreen insertdatetime media table paste code help wordcount',
                toolbar: 'undo redo | formatselect | bold italic backcolor | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | removeformat | help',
                height: 300, // Chiều cao của editor
                menubar: 'file edit view insert format tools help',
                content_css: [ // Cấu hình CSS tùy chọn (optional)
                    'https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css',
                ]
            });
        });
    </script>
}

<style>
    /* VARIABLES (Đảm bảo đồng bộ với Layout) */
    :root {
        --primary-color: #4f46e5;
        --success-color: #10b981;
        --text-primary: #1f2937;
    }

    /* === FORM HEADER VÀ CARD STYLES === */
    .form-header {
        background: linear-gradient(135deg, var(--primary-color) 0%, #6366f1 100%);
        color: white;
        padding: 1.5rem 2rem;
        border-radius: 15px 15px 0 0;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        font-weight: 700;
        font-size: 1.5rem;
    }

    .form-card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

    /* === INPUT VÀ LABEL STYLES === */
    .form-control, .form-select {
        border-radius: 8px;
        padding: 0.75rem 1rem;
        transition: all 0.3s;
    }

        .form-control:focus, .form-select:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.25rem rgba(79, 70, 229, 0.25);
        }

    .form-label {
        font-weight: 600;
        color: var(--text-primary);
        margin-bottom: 0.5rem;
    }

    /* === BUTTON STYLES === */
    .btn-action {
        padding: 0.75rem 1.5rem;
        border-radius: 50px;
        font-weight: 600;
        transition: all 0.3s;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .btn-primary {
        background-color: var(--primary-color);
        border-color: var(--primary-color);
    }

        .btn-primary:hover {
            background-color: #4338ca;
            border-color: #4338ca;
        }

    .btn-secondary {
        border-radius: 10px;
    }
</style>

<div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">
        <div class="card form-card">

            <div class="form-header">
                <i class="fas fa-plus-circle me-2"></i> @ViewBag.Title
            </div>

            <div class="card-body p-4 p-md-5">
                
                <form asp-action="CreateDepartment" method="post" class="row g-4">
                    @Html.AntiForgeryToken()

                    <div class="col-12">
                        <label asp-for="TenKhoa" class="form-label">Tên khoa</label>
                        <input asp-for="TenKhoa" class="form-control" placeholder="Ví dụ: Khoa Răng Hàm Mặt" required maxlength="100" />
                        <span asp-validation-for="TenKhoa" class="text-danger mt-1 d-block"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="MoTa" class="form-label">Mô tả</label>
                        <textarea asp-for="MoTa" class="form-control" id="MoTa" rows="8" placeholder="Mô tả chi tiết về chức năng và chuyên môn của khoa này."></textarea>
                        <span asp-validation-for="MoTa" class="text-danger mt-1 d-block"></span>
                    </div>

                    <div class="col-12 d-flex justify-content-end gap-3 border-top pt-4 mt-5">
                        <a asp-action="Departments" class="btn btn-secondary btn-action">
                            <i class="fas fa-arrow-left me-2"></i> Quay lại
                        </a>

                        <button type="submit" class="btn btn-primary btn-action">
                            <i class="fas fa-save me-2"></i> Lưu Khoa
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>