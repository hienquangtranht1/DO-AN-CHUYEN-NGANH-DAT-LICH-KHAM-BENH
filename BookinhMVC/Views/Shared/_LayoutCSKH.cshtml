<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hệ thống CSKH</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" />

    <style>
        body {
            background-color: #f0f2f5;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            height: 100vh;
            overflow: hidden;
        }

        /* Sidebar Danh sách khách hàng */
        .sidebar {
            height: 100vh;
            background: #fff;
            border-right: 1px solid #dee2e6;
            display: flex;
            flex-direction: column;
        }

        .sidebar-header {
            padding: 15px;
            background: #0d6efd;
            color: white;
            font-weight: bold;
        }

        .user-list {
            flex: 1;
            overflow-y: auto;
        }

        .user-item {
            padding: 15px;
            border-bottom: 1px solid #f1f1f1;
            cursor: pointer;
            transition: 0.2s;
            position: relative;
        }

            .user-item:hover {
                background-color: #f8f9fa;
            }

            .user-item.active {
                background-color: #e7f1ff;
                border-left: 4px solid #0d6efd;
            }

        .badge-new {
            position: absolute;
            top: 15px;
            right: 15px;
            background: #dc3545;
            color: white;
            font-size: 0.7rem;
            padding: 2px 6px;
            border-radius: 10px;
            display: none;
        }

        /* Khu vực Chat */
        .chat-area {
            height: 100vh;
            display: flex;
            flex-direction: column;
            background: #fff;
        }

        .chat-header {
            padding: 15px;
            border-bottom: 1px solid #dee2e6;
            background: #fff;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .chat-history {
            flex: 1;
            overflow-y: auto;
            padding: 20px;
            background: #eef2f5;
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        .chat-input-area {
            padding: 15px;
            background: #fff;
            border-top: 1px solid #dee2e6;
        }

        /* Bong bóng chat */
        .message-bubble {
            max-width: 75%;
            padding: 10px 15px;
            border-radius: 15px;
            font-size: 0.95rem;
            line-height: 1.4;
            position: relative;
            word-wrap: break-word;
        }

        /* Tin nhắn của CSKH (Màu xanh, bên phải) */
        .msg-me {
            background-color: #0d6efd;
            color: white;
            align-self: flex-end;
            border-bottom-right-radius: 2px;
        }

        /* Tin nhắn của Khách (Màu trắng, bên trái) */
        .msg-guest {
            background-color: #fff;
            color: #212529;
            align-self: flex-start;
            border-bottom-left-radius: 2px;
            box-shadow: 0 1px 2px rgba(0,0,0,0.1);
        }

        .time-stamp {
            font-size: 0.7rem;
            margin-top: 4px;
            opacity: 0.8;
            text-align: right;
            display: block;
        }
    </style>
</head>
<body>
    <div class="container-fluid p-0">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.js"></script>
</body>
</html>