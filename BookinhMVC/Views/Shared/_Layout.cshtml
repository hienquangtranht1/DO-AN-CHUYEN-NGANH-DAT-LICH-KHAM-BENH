    var userId = Context.Session.GetInt32("UserId");
    string patientName = Context.Session.GetString("PatientName");
    bool isLoggedIn = !string.IsNullOrEmpty(userRole);

    decimal currentBalance = 0;
    if (userId != null && userRole == "Bệnh nhân")
    {
        var wallet = _context.TaiKhoanBenhNhan.FirstOrDefault(x => x.MaBenhNhan == userId);
        currentBalance = wallet?.SoDuHienTai ?? 0;
    }
}

@functions {
    public string IsActive(string controller, string action)
    {
        var routeData = ViewContext.RouteData.Values;
        var currentController = routeData["controller"]?.ToString();
        var currentAction = routeData["action"]?.ToString();

        if (string.Equals(currentController, controller, StringComparison.OrdinalIgnoreCase) &&
            string.Equals(currentAction, action, StringComparison.OrdinalIgnoreCase))
        {
            return "active";
        }

        if (string.Equals(controller, "Home", StringComparison.OrdinalIgnoreCase) && action == "GeneralCheckup")
        {
            var services = new[] { "GeneralCheckup", "Cardiology", "Testing" };
            if (string.Equals(currentController, "Home", StringComparison.OrdinalIgnoreCase) &&
                services.Contains(currentAction, StringComparer.OrdinalIgnoreCase))
            {
                return "active";
            }
        }

        if (string.Equals(controller, "Home", StringComparison.OrdinalIgnoreCase) && action == "HospitalAbout")
        {
            var abouts = new[] { "HospitalAbout", "Doctors" };
            if (string.Equals(currentController, "Home", StringComparison.OrdinalIgnoreCase) &&
                abouts.Contains(currentAction, StringComparer.OrdinalIgnoreCase))
            {
                return "active";
            }
        }

        var role = ViewContext.HttpContext.Session.GetString("UserRole");
        if (!string.IsNullOrEmpty(role) && role == "Bệnh nhân" && controller == "User" && string.IsNullOrEmpty(action))
        {
            if ((string.Equals(currentController, "User", StringComparison.OrdinalIgnoreCase) &&
                 (currentAction == "Appointments" || currentAction == "UpdateProfile" || currentAction == "ChangePassword")) ||
                (string.Equals(currentController, "Payment", StringComparison.OrdinalIgnoreCase)))
            {
                return "active";
            }
        }

        return "";
    }
}

