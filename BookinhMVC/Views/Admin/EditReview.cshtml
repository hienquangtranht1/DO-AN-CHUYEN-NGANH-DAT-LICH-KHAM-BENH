@model BookinhMVC.Models.DanhGia
@{
    Layout = "_AdminLayout";
    ViewBag.Active = "Reviews";
    ViewBag.Title = "Sửa Đánh giá";

    // YÊU CẦU: Controller phải truyền các danh sách này vào ViewBag
    var doctors = ViewBag.Doctors as List<BookinhMVC.Models.BacSi>;
    var patients = ViewBag.Patients as List<BookinhMVC.Models.BenhNhan>;

    // Tạo danh sách điểm đánh giá
    var ratingScores = Enumerable.Range(1, 5).ToList();
}

@section Scripts {
    <script src="https://cdn.tiny.cloud/1/rkfxe461o9rhm9y5pasyuukghsi6ftjy9ohpay9bhwzulh89/tinymce/7/tinymce.min.js" referrerpolicy="origin"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // KHỞI TẠO TINYMCE CHO TEXTAREA CÓ ID LÀ 'NhanXet'
            tinymce.init({
                selector: '#NhanXet', // ID của phần tử textarea
                plugins: 'advlist autolink lists link image charmap print preview anchor searchreplace visualblocks code fullscreen insertdatetime media table paste code help wordcount',
                toolbar: 'undo redo | formatselect | bold italic backcolor | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | removeformat | help',
                height: 350,
                menubar: 'file edit view insert format tools help',
                content_css: [
                    'https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css',
                ]
            });
        });
    </script>
}

<style>
    /* VARIABLES */
    :root {
        --primary-color: #4f46e5;
        --warning-color: #f59e0b;
        --text-primary: #1f2937;
        --text-secondary: #6b7280;
    }

    /* === FORM CARD STYLES === */
    .form-header {
        background: linear-gradient(135deg, var(--primary-color) 0%, #6366f1 100%);
        color: white;
        padding: 1.5rem 2rem;
        border-radius: 15px 15px 0 0;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        font-weight: 700;
        font-size: 1.5rem;
    }

    .form-card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

    .form-control, .form-select {
        border-radius: 8px;
        padding: 0.75rem 1rem;
        transition: all 0.3s;
    }

    .form-label {
        font-weight: 600;
        color: var(--text-primary);
        margin-bottom: 0.5rem;
    }

    .btn-action {
        padding: 0.75rem 1.5rem;
        border-radius: 50px;
        font-weight: 600;
        transition: all 0.3s;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .rating-label i {
        color: var(--warning-color);
        font-size: 1.25rem;
    }

</style>

<div class="row justify-content-center">
    <div class="col-lg-10 col-md-12">
        <div class="card form-card">
            <div class="form-header">
                <i class="fas fa-star-half-alt me-2"></i> @ViewBag.Title
            </div>
            <div class="card-body p-4 p-md-5">

                @* @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" }) *@

                <form asp-action="EditReview" method="post" class="row g-4">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="MaDanhGia" />

                    <div class="col-md-6">
                        <label asp-for="MaBacSi" class="form-label">Bác sĩ</label>
                        <select asp-for="MaBacSi" class="form-select" required>
                            @if (doctors != null)
                            {
                                @foreach (var bs in doctors)
                                {
                                    <option value="@bs.MaBacSi" selected="@(Model.MaBacSi == bs.MaBacSi)">
                                        @bs.HoTen (@bs.Khoa?.TenKhoa)
                                    </option>
                                }
                            }
                        </select>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="MaBenhNhan" class="form-label">Bệnh nhân</label>
                        <select asp-for="MaBenhNhan" class="form-select" required>
                            @if (patients != null)
                            {
                                @foreach (var p in patients)
                                {
                                    <option value="@p.MaBenhNhan" selected="@(Model.MaBenhNhan == p.MaBenhNhan)">
                                        @p.HoTen (Mã: @p.MaBenhNhan)
                                    </option>
                                }
                            }
                        </select>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="DiemDanhGia" class="form-label rating-label">
                            Điểm đánh giá
                            <i class="fas fa-star ms-2"></i>
                        </label>
                        <select asp-for="DiemDanhGia" class="form-select" required>
                            @foreach (var score in ratingScores)
                            {
                                <option value="@score" selected="@(Model.DiemDanhGia == score)">@score sao</option>
                            }
                        </select>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="NgayDanhGia" class="form-label">Ngày đánh giá</label>
                        <input asp-for="NgayDanhGia" class="form-control" type="datetime-local" />
                    </div>

                    <div class="col-12">
                        <label asp-for="NhanXet" class="form-label">Nhận xét chi tiết</label>
                        <textarea asp-for="NhanXet" class="form-control" id="NhanXet" rows="10"></textarea>
                    </div>

                    <div class="col-12 d-flex justify-content-end pt-3 border-top mt-5">
                        <a href="/Admin/Reviews" class="btn btn-secondary btn-action me-3">
                            <i class="fas fa-arrow-left me-1"></i> Quay lại
                        </a>
                        <button type="submit" class="btn btn-primary btn-action">
                            <i class="fas fa-save me-1"></i> Lưu thay đổi
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>