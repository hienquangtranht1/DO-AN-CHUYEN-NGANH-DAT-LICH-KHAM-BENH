@* File: Views/User/ForgotPassword.cshtml (hoặc ResetPassword.cshtml) *@
@{
    ViewData["Title"] = "Đặt lại mật khẩu - Four Rock";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var error = TempData["fp_error"] as string;
    var message = TempData["fp_message"] as string;
    var step = ViewBag.Step as string ?? "email"; // step có thể là 'email', 'otp', hoặc 'reset'
}

<div class="container my-5 pt-5">
    <div class="password-reset-container mx-auto col-lg-6 col-md-8 p-4 p-md-5 rounded-4 shadow-lg bg-white" data-aos="fade-up">

        <div class="header text-center mb-4">
            <h2 class="fw-bold text-primary display-6 mb-2">
                <i class="fas fa-lock me-2"></i> Đặt lại mật khẩu
            </h2>
            <p class="text-secondary">Bệnh viện Four Rock</p>

            <div class="progress mt-4 mx-auto" style="height: 10px; max-width: 350px;">
                <div class="progress-bar" role="progressbar"
                     style="width: @(step == "email" ? "33" : step == "otp" ? "66" : "100")%;"
                     aria-valuenow="@(step == "email" ? 33 : step == "otp" ? 66 : 100)" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
            <p class="mt-2 small text-muted">Bước: @(step == "email" ? "1/3" : step == "otp" ? "2/3" : "3/3")</p>
        </div>

        @* Hiển thị thông báo (Thành công/Lỗi) *@
        @if (!string.IsNullOrEmpty(error))
        {
            <div class="alert alert-danger rounded-3"><i class="fas fa-times-circle me-2"></i>@error</div>
        }
        @if (!string.IsNullOrEmpty(message))
        {
            <div class="alert alert-success rounded-3"><i class="fas fa-check-circle me-2"></i>@message</div>
        }

        @* === BƯỚC 1: NHẬP EMAIL === *@
        @if (step == "email")
        {
            <p class="text-center text-dark">Vui lòng nhập email đã đăng ký để nhận mã xác nhận.</p>
            <form method="post" asp-controller="User" asp-action="SendForgotPasswordOtp">
                @* Giả định action gửi OTP *@
                <input type="hidden" name="step" value="email" />
                <div class="mb-3">
                    <label for="email" class="form-label fw-medium"><i class="fas fa-envelope me-2 text-secondary"></i>Email đã đăng ký:</label>
                    <input type="email" name="email" id="email" class="form-control rounded-3 py-2" placeholder="Nhập email của bạn" required />
                </div>
                <button type="submit" class="btn btn-primary w-100 rounded-pill py-2 fw-bold mt-3">
                    <i class="fas fa-paper-plane me-2"></i>Gửi mã OTP
                </button>
            </form>
        }
        @* === BƯỚC 2: XÁC NHẬN OTP === *@
        else if (step == "otp")
        {
            <div class="otp-container text-center p-3 mb-4 rounded-3 border border-info bg-light">
                <p class="mb-2 fw-medium">Mã OTP đã được gửi đến email của bạn. Vui lòng kiểm tra:</p>
                <div class="otp-box bg-white fw-bold text-info border border-secondary mx-auto">@ViewBag.OtpPreview ?? "******"</div>
                <p class="text-muted small mt-2">Mã OTP có hiệu lực trong 5 phút</p>
            </div>

            <form method="post" asp-controller="User" asp-action="VerifyOtpAndProceed">
                @* Giả định action xác nhận OTP *@
                <input type="hidden" name="step" value="verify_otp" />
                <div class="mb-3">
                    <label for="otp" class="form-label fw-medium"><i class="fas fa-key me-2 text-secondary"></i>Nhập mã OTP:</label>
                    <input type="text" name="otp" id="otp" class="form-control rounded-3 py-2 text-center fs-5" placeholder="Nhập mã 6 số" required maxlength="6" />
                </div>
                <button type="submit" class="btn btn-success w-100 rounded-pill py-2 fw-bold mt-3">
                    <i class="fas fa-check-circle me-2"></i>Xác nhận OTP
                </button>
            </form>
        }
        @* === BƯỚC 3: ĐẶT MẬT KHẨU MỚI === *@
        else if (step == "reset")
        {
            <p class="text-center text-dark">Xác nhận thành công. Vui lòng đặt mật khẩu mới.</p>
            <form method="post" asp-controller="User" asp-action="ResetPassword">
                @* Giả định action đặt lại mật khẩu *@
                <input type="hidden" name="step" value="reset_password" />
                <input type="hidden" name="otp" value="@ViewBag.OtpValue" /> @* Truyền OTP hoặc Token ẩn *@

                <div class="mb-3 position-relative">
                    <label for="newPassword" class="form-label fw-medium"><i class="fas fa-lock me-2 text-secondary"></i>Mật khẩu mới:</label>
                    <input type="password" name="newPassword" id="newPassword" class="form-control rounded-3 py-2" placeholder="Nhập mật khẩu mới" required />
                    <i class="fas fa-eye toggle-password" data-target="#newPassword"></i>
                </div>

                <div class="mb-3 position-relative">
                    <label for="confirmPassword" class="form-label fw-medium"><i class="fas fa-lock me-2 text-secondary"></i>Xác nhận mật khẩu mới:</label>
                    <input type="password" name="confirmPassword" id="confirmPassword" class="form-control rounded-3 py-2" placeholder="Nhập lại mật khẩu mới" required />
                    <i class="fas fa-eye toggle-password" data-target="#confirmPassword"></i>
                </div>

                <button type="submit" class="btn btn-primary w-100 rounded-pill py-2 fw-bold mt-3">
                    <i class="fas fa-save me-2"></i>Đặt lại mật khẩu
                </button>
            </form>
        }

        <div class="footer mt-4 border-top pt-3">
            <a href="~/User/Login" class="btn btn-link text-secondary"><i class="fas fa-arrow-left me-2"></i>Quay lại trang đăng nhập</a>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/js/bootstrap.bundle.min.js"></script>
    <script>
        // Toggle Password Visibility
        $(document).ready(function () {
            $(".toggle-password").click(function () {
                var targetInput = $($(this).data("target"));
                var type = targetInput.attr("type") === "password" ? "text" : "password";
                targetInput.attr("type", type);
                $(this).toggleClass("fa-eye fa-eye-slash");
            });
        });

        // Initialize AOS if it exists
        if (typeof AOS !== 'undefined') {
            AOS.init({
                duration: 800,
                once: true,
                offset: 50
            });
        }
    </script>
}

<style>
    /* Custom styles for consistency */
    .password-reset-container {
        /* Màu nền, border, shadow đồng bộ */
        background-color: #fff;
        border: 1px solid #e9ecef;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    }

    .header h2 {
        color: #0d6efd; /* primary-color */
        font-weight: 700;
    }

    .progress-bar {
        background-color: #0d6efd;
    }

    .otp-box {
        font-size: 1.5rem;
        color: #0d6efd;
        font-weight: bold;
        padding: 10px 20px;
        border-radius: 8px;
        display: inline-block;
        border: 2px dashed #0dcaf0 !important;
        background-color: #e9f5ff;
    }

    .form-control:focus, .form-select:focus {
        border-color: #80bdff;
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
    }

    .toggle-password {
        /* Cải thiện vị trí và style cho icon */
        right: 12px;
        transform: translateY(-50%) scale(0.9);
        color: #6c757d;
        transition: color 0.2s;
    }

        .toggle-password:hover {
            color: #0d6efd;
        }

    .btn-primary {
        background-color: #0d6efd;
        border-color: #0d6efd;
    }

    .btn-success {
        background-color: #198754;
        border-color: #198754;
    }

        .btn-primary:hover, .btn-success:hover {
            opacity: 0.9;
        }

    .footer a {
        font-weight: 500;
    }
</style>