@model BookinhMVC.Models.Category
@{
    ViewData["Title"] = "Chỉnh Sửa Danh Mục Blog: " + Model.CategoryName;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Chỉnh Sửa Danh Mục: @Model.CategoryName</h6>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <form asp-action="EditBlogCategory" method="post" asp-route-id="@Model.CategoryId">
                    <input type="hidden" asp-for="CategoryId" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group mb-3">
                        <label asp-for="CategoryName" class="control-label"></label>
                        <input asp-for="CategoryName" name="categoryName" class="form-control" required />
                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Slug" class="control-label"></label>
                        <input asp-for="Slug" name="slug" class="form-control" />
                    </div>

                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-success"><i class="fas fa-check"></i> Cập Nhật</button>
                        <a asp-action="BlogCategories" class="btn btn-secondary">Hủy</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>