@model dynamic
@{
    Layout = "_AdminLayout";
    ViewBag.Active = "Doctors";
    ViewBag.Title = "Thêm Bác sĩ mới";
    var khoas = ViewBag.Khoas as List<BookinhMVC.Models.Khoa>;
}

@section Scripts {
    <script src="https://cdn.tiny.cloud/1/rkfxe461o9rhm9y5pasyuukghsi6ftjy9ohpay9bhwzulh89/tinymce/7/tinymce.min.js" referrerpolicy="origin"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // KHỞI TẠO TINYMCE CHO TEXTAREA CÓ ID LÀ 'moTa'
            tinymce.init({
                selector: '#moTa', // Đảm bảo ID này khớp với ID của thẻ <textarea>
                plugins: 'advlist autolink lists link image charmap print preview anchor searchreplace visualblocks code fullscreen insertdatetime media table paste code help wordcount',
                toolbar: 'undo redo | formatselect | bold italic backcolor | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | removeformat | help',
                height: 400, // Chiều cao
                menubar: 'file edit view insert format tools help',
                content_css: [
                    'https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css',
                ]
            });
        });
    </script>
}

<style>
    /* VARIABLES */
    :root {
        --primary-color: #4f46e5;
        --success-color: #10b981;
        --text-primary: #1f2937;
        --text-secondary: #6b7280;
    }

    /* === FORM CARD & HEADER STYLES === */
    .form-header-gradient {
        background: linear-gradient(135deg, var(--primary-color) 0%, #6366f1 100%);
        color: white;
        padding: 1.5rem 2rem;
        border-radius: 15px 15px 0 0;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        font-weight: 700;
        font-size: 1.5rem;
    }

    .card-doctor-form {
        border: none;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        margin-top: 1.5rem;
    }

    .form-control, .form-select {
        border-radius: 8px;
        padding: 0.75rem 1rem;
        transition: all 0.3s;
    }

        .form-control:focus, .form-select:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.25rem rgba(79, 70, 229, 0.25);
        }

    .form-label {
        font-weight: 600;
        color: var(--text-primary);
        margin-bottom: 0.5rem;
    }

    /* === SUB-HEADER STYLES === */
    .section-header {
        color: var(--primary-color) !important;
        font-weight: 700;
    }

    /* === BUTTON STYLES (Đồng bộ) === */
    .btn-action {
        padding: 0.75rem 1.5rem;
        border-radius: 50px;
        font-weight: 600;
        transition: all 0.3s;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .btn-success {
        background-color: var(--success-color);
        border-color: var(--success-color);
    }

        .btn-success:hover {
            background-color: #059669;
            border-color: #059669;
        }

    .btn-secondary {
        border-radius: 10px;
    }
</style>

<div class="row justify-content-center">
    <div class="col-lg-10 col-md-12">
        <div class="card card-doctor-form">

            <div class="form-header-gradient">
                <i class="fas fa-user-plus me-2"></i> @ViewBag.Title
            </div>

            <div class="card-body p-4 p-md-5">

                <form asp-action="CreateDoctor" method="post" enctype="multipart/form-data" class="row g-4">
                    @Html.AntiForgeryToken()

                    <h4 class="mb-3 section-header border-bottom pb-2"><i class="fas fa-id-card me-2"></i> Thông tin cơ bản & Tài khoản</h4>

                    <div class="col-md-6">
                        <label for="hoTen" class="form-label">Họ tên Bác sĩ (<span class="text-danger">*</span>)</label>
                        <input type="text" id="hoTen" name="hoTen" class="form-control" required placeholder="Ví dụ: Nguyễn Văn A" />
                    </div>

                    <div class="col-md-6">
                        <label for="tenDangNhap" class="form-label">Tên đăng nhập (<span class="text-danger">*</span>)</label>
                        <input type="text" id="tenDangNhap" name="tenDangNhap" class="form-control" required placeholder="Tên tài khoản để đăng nhập" />
                        <div class="form-text text-secondary">Mật khẩu mặc định sẽ là "123456"</div>
                    </div>

                    <div class="col-12">
                        <label for="maKhoa" class="form-label">Khoa/Chuyên môn (<span class="text-danger">*</span>)</label>
                        <select id="maKhoa" name="maKhoa" class="form-select" required>
                            <option value="">-- Chọn khoa công tác --</option>
                            @foreach (var k in khoas)
                            {
                                <option value="@k.MaKhoa">@k.TenKhoa</option>
                            }
                        </select>
                    </div>


                    <h4 class="mt-4 section-header border-bottom pb-2"><i class="fas fa-address-book me-2"></i> Thông tin Liên hệ</h4>

                    <div class="col-md-6">
                        <label for="soDienThoai" class="form-label">Số điện thoại</label>
                        <input type="tel" id="soDienThoai" name="soDienThoai" class="form-control" placeholder="Ví dụ: 090xxxxxxx" />
                    </div>

                    <div class="col-md-6">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" id="email" name="email" class="form-control" placeholder="Ví dụ: doctor.a@hospital.com" />
                    </div>


                    <h4 class="mt-4 section-header border-bottom pb-2"><i class="fas fa-file-alt me-2"></i> Hình ảnh & Mô tả</h4>

                    <div class="col-12">
                        <label for="file" class="form-label">Ảnh hồ sơ</label>
                        <input type="file" id="file" name="file" class="form-control" accept="image/*" />
                        <div class="form-text text-secondary">Ảnh đại diện sẽ hiển thị trên trang hồ sơ và danh sách bác sĩ.</div>
                    </div>

                    <div class="col-12">
                        <label for="moTa" class="form-label">Mô tả tóm tắt/Chuyên môn</label>
                        <textarea id="moTa" name="moTa" class="form-control" rows="8" placeholder="Nhập mô tả tóm tắt về kinh nghiệm/chuyên môn của bác sĩ"></textarea>
                    </div>

                    <div class="col-12 d-flex justify-content-end pt-3 border-top mt-5">
                        <a href="/Admin/Doctors" class="btn btn-secondary btn-action me-3">
                            <i class="fas fa-arrow-left me-1"></i> Quay lại
                        </a>
                        <button type="submit" class="btn btn-success btn-action">
                            <i class="fas fa-save me-1"></i> Lưu thông tin Bác sĩ
                        </button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>