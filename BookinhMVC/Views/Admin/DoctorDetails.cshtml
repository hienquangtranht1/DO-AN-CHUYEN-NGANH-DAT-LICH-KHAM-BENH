@model BookinhMVC.Models.BacSi
@{
    Layout = "_AdminLayout";
    ViewBag.Active = "Doctors";
    ViewBag.Title = "Chi tiết Bác sĩ";

    var imgSrc = !string.IsNullOrEmpty(Model.HinhAnhBacSi)
        ? (Model.HinhAnhBacSi.StartsWith("/uploads") ? Model.HinhAnhBacSi : "/uploads/" + Model.HinhAnhBacSi)
        : "/images/default-doctor.png"; // Giả định có ảnh mặc định
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0"><i class="fas fa-user-md me-2 text-primary"></i>Hồ sơ Bác sĩ</h2>
</div>

<div class="card shadow-lg">
    <div class="card-header bg-primary text-white d-flex align-items-center">
        <i class="fas fa-id-card-alt me-2 fs-5"></i>
        <h4 class="mb-0">Thông tin chi tiết: @Model.HoTen</h4>
    </div>

    <div class="card-body">
        <div class="row">

            @* Cột 1: Ảnh đại diện *@
            <div class="col-md-4 text-center border-end">
                <div class="mb-3">
                    <img src="@imgSrc"
                         alt="@Model.HoTen"
                         class="img-fluid rounded-circle shadow-sm"
                         style="width: 150px; height: 150px; object-fit: cover;"
                         onerror="this.onerror=null; this.src='/images/default-doctor.png';" />
                </div>
                <h5 class="fw-bold text-primary">@Model.HoTen</h5>
                <p class="text-muted mb-1">
                    <i class="fas fa-building me-1"></i> @(Model.Khoa?.TenKhoa ?? "Chưa xác định")
                </p>
                <p class="text-secondary small">
                    <i class="fas fa-user-circle me-1"></i> Tên đăng nhập: **@(Model.NguoiDung?.TenDangNhap ?? "N/A")**
                </p>
            </div>

            @* Cột 2: Chi tiết thông tin *@
            <div class="col-md-8">
                <h5 class="border-bottom pb-2 mb-3 text-secondary">Chi tiết Hồ sơ</h5>
                <dl class="row mb-0">

                    <dt class="col-sm-3">Mã Bác sĩ:</dt>
                    <dd class="col-sm-9">
                        <span class="badge bg-dark">@Model.MaBacSi</span>
                    </dd>

                    <dt class="col-sm-3">Khoa:</dt>
                    <dd class="col-sm-9">
                        <span class="badge bg-info text-dark">@(Model.Khoa?.TenKhoa ?? "N/A")</span>
                    </dd>

                    <dt class="col-sm-3">Email:</dt>
                    <dd class="col-sm-9">
                        <i class="fas fa-envelope me-1"></i> @(Model.Email ?? "Chưa có")
                    </dd>

                    <dt class="col-sm-3">Số điện thoại:</dt>
                    <dd class="col-sm-9">
                        <i class="fas fa-phone me-1"></i> @(Model.SoDienThoai ?? "Chưa có")
                    </dd>

                    <dt class="col-sm-3">Ngày tạo hồ sơ:</dt>
                    <dd class="col-sm-9">
                        <i class="far fa-calendar-alt me-1"></i> @Model.NgayTao.ToString("dd/MM/yyyy HH:mm")
                    </dd>
                </dl>

                <h5 class="border-bottom pb-2 mt-4 mb-3 text-secondary">Mô tả & Chuyên môn</h5>
                <div class="p-3 bg-light rounded">
                    @if (!string.IsNullOrEmpty(Model.MoTa))
                    {
                        @Html.Raw(Model.MoTa)
                    }
                    else
                    {
                        <p class="text-muted fst-italic">Không có mô tả chuyên môn.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="card-footer text-end">
        <a href="/Admin/EditDoctor/@Model.MaBacSi" class="btn btn-warning me-2">
            <i class="fas fa-edit me-1"></i> Sửa hồ sơ
        </a>
        <a href="/Admin/Doctors" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i> Quay lại danh sách
        </a>
    </div>
</div>